<holidays country="RO">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Romania -->

    <default language="ro"/>

    <holiday>
        <description language="ro" name="Anul nou"/>
        <description language="en" name="New Year's Day" type="Official non-working holiday"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="2. Anul nou"/>
        <description language="en" name="Day after New Year's Day" type="Official non-working holiday"/>
        <definition>
            <fixed month="January" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Unirii"/>
        <description language="en" name="Unification Day" type="Official holiday"/>
        <definition>
            <fixed month="January" day="24"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="ro" name="Dragobetele"/>
        <description language="en" name="St. Valentine's Day" type="Traditional festival"/>
        <definition>
            <fixed month="February" day="24"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Mărţişorul"/>
        <description language="en" name="Spring festival" type="Traditional festival"/>
        <definition>
            <fixed month="March" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Unirii"/>
        <description language="en" name="Women's Day" type="Official holiday"/>
        <definition>
            <fixed month="March" day="8"/>
        </definition>
    </holiday>

    <!-- http://www.mediafax.ro/english/romania-celebrates-fathers-day-on-second-sunday-of-may-6088334 -->
    <!-- http://ro.wikipedia.org/wiki/Ziua_Mamei -->
    <holiday>
        <description language="ro" name="Ziua Mamei"/>
        <description language="en" name="Mother's Day"/>
        <description language="de" name="Muttertag"/>
        <definition firstyear="2010">
            <rule nth="First" weekday="Sunday" month="May"/>
        </definition>
    </holiday>

    <!-- http://ro.wikipedia.org/wiki/Ziua_Tat%C4%83lui -->
    <holiday>
        <description language="ro" name="Ziua_Tatălui"/>
        <description language="en" name="Father's Day"/>
        <description language="de" name="Muttertag"/>
        <definition firstyear="2010">
            <rule nth="Second" weekday="Sunday" month="May"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Paştele"/>
        <description language="en" name="Easter" type="Official non-working holiday"/>
        <definition>
            <easter church="eastern"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="NATO Day" type="Not a public holiday"/>
        <definition>
            <rule nth="First" weekday="Sunday" month="April"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Eroilor (Înălţarea)"/>
        <description language="en" name="Heroes' Day (Ascension)" type="Official non-working holiday"/>
        <definition>
            <easter church="eastern"/>
            <!-- 40 days after the Orthodox Easter -->
            <add days="40"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="1. Rusaliile"/>
        <description language="en" name="Pentecost, Whit Monday" type="Official non-working holiday"/>
        <definition>
            <easter church="eastern"/>
            <!-- 50 days after the Orthodox Easter. -->
            <add days="50"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="2. Rusaliile"/>
        <description language="en" name="Whit Monday" type="Official non-working holiday"/>
        <definition>
            <easter church="eastern"/>
            <!-- 51 days after the Orthodox Easter -->
            <add days="51"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Bucharest" action="start"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua muncii"/>
        <description language="en" name="Labour Day" type="Official non-working holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Copilului"/>
        <description language="en" name="Child's day" type="Official holiday"/>
        <definition>
            <fixed month="June" day="1"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="ro" name="Ziua Tricolorului"/>
        <description language="en" name="Flag Day" type="Official holiday"/>
        <!-- was first performed, in 1848 at Râmnicu Vâlcea -->
        <definition firstyear="1848">
            <fixed month="June" day="26"/>
        </definition>
    </holiday>    

    <holiday>
        <description language="ro" name="Ziua Imnului naţional"/>
        <description language="en" name="National Anthem Day" type="Official holiday"/>
        <definition>
            <fixed month="July" day="29"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Adormirea Maicii Domnului"/>
        <description language="en" name="Dormition of the Theotokos" type="Official non-working holiday"/>
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Armed Forces Day"/>
        <description language="en" name="Armed Forces Day" type="Not a public holiday"/>
        <definition>
            <fixed month="October" day="25"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Naţională (Ziua Marii Uniri)"/>
        <description language="en" name="National holiday (Great Union Day)" type="Official non-working holiday"/>
        <definition>
            <fixed month="December" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Ziua Constituţiei"/>
        <description language="en" name="Constitution Day"/>
        <definition>
            <fixed month="December" day="8"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="Crăciunul"/>
        <description language="en" name="Christmas Day" type="Official non-working holiday"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ro" name="A doua zi de Crăciun"/>
        <description language="en" name="Boxing Day" type="Official non-working holiday"/>
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="End Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Bucharest" action="end"/>
        </definition>
    </holiday>

</holidays>
