<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="si">
    <!-- Slowenien http://www.goruma.de/Laender/Europa/Slowenien/Wissenswertes/index_1.html-->
	<!-- enthält keine Feiertage der orthodoxen Christen !! -->

    <holiday name="Neujahrstag" type="gesetzlich" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    <holiday name="2. Neujahrtag" type="gesetzlich">
        <definition>
            <fixed month="January" day="2"/>
        </definition>
    </holiday>
    <holiday name="Prešeren-Tag (slowenischer Kulturfeiertag)" type="gesetzlich">
        <definition>
            <fixed month="February" day="8"/>
        </definition>
    </holiday>
    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Ljubljana" action="start"/>
        </definition>
    </holiday>
    <holiday name="Karfreitag" international="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    <holiday name="Ostersonntag (Ostern)" type="gesetzlich">
        <import name="Easter Sunday"/>
    </holiday>
    <holiday name="Ostermontag (Emmaustag)" type="gesetzlich">
        <import name="Easter Monday"/>
    </holiday>
    <holiday name="Tag des Aufstandes gegen die Besatzung" type="gesetzlich">
        <definition>
            <fixed month="April" day="27"/>
        </definition>
    </holiday>
    <holiday name="Tag der Arbeit" type="gesetzlich">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    <holiday name="2. Tag der Arbeit" type="gesetzlich">
        <definition>
            <fixed month="May" day="2"/>
        </definition>
    </holiday>
    <holiday name="Christi Himmelfahrt" type="katholisch">
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    <holiday name="Pfingstsonntag (Pfingsten)" type="gesetzlich" international="Whit Sunday">
        <import name="Pentecost"/>
    </holiday>
    <holiday name="Pfingstmontag">
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>
    <holiday name="Fronleichnam" international="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>
    <holiday name="Staatsfeiertag" type="gesetzlich">
        <definition>
            <fixed month="June" day="25"/>
        </definition>
    </holiday>
    <holiday name="Unabhängigkeitstag/ Nationalfeiertag" type="gesetzlich">
        <definition>
            <fixed month="August" day="1"/>
        </definition>
    </holiday>
    <holiday name="Mariä Himmelfahrt" type="gesetzlich">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>
    <holiday name="Ende der Sommerzeit (Uhren 1 h zurückstellen)" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Ljubljana" action="end"/>
        </definition>
    </holiday>
    <holiday name="Reformationstag" type="gesetzlich">
        <definition>
            <fixed month="October" day="31"/>
        </definition>
    </holiday>
    <holiday name="Allerheiligen" type="gesetzlich" international="All Saints">
        <!-- All Saint's Day is a Christian holy day observed by many Western churches on November 1 -->
        <import name="All Saints’ Day"/>
    </holiday>
    <holiday name="1. Weihnachtsfeiertag (Weihnachten)" type="gesetzlich" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    <holiday name="2. Weihnachtsfeiertag" type="gesetzlich" international="Boxing Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
</holidays>