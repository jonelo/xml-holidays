    http://xml-holidays.sourceforge.net/
    Thank you for keeping the comment.
-->
<holidays country="GB">
    <!-- http://www.great-britain.co.uk/A-to-Z/public-holidays.htm -->
    <!-- http://en.wikipedia.org/wiki/Bank_Holiday -->
    <!-- http://www.berr.gov.uk/whatwedo/employment/bank-public-holidays/index.html -->
    <!-- http://www.2008bankholidays.co.uk/ -->

    <default language="en"/>
    
    <!-- Royal proclamation is also used to shift bank holidays that would
         otherwise fall on a weekend. In this way, public holidays are not
         'lost' in years when they coincide with weekends. These deferred
         bank holiday days are termed a 'bank holiday in lieu' of the typical
         anniversary date.  -->
    
    <holiday>
        <description language="en" name="New Year's Day" type="bank holiday"/>
        <definition firstyear="1971">
            <fixed day="1" month="January"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="2nd January" type="bank holiday" region="Scotland only"/>
        <definition firstyear="1971">
            <fixed day="2" month="January"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Burns_Night -->
    <holiday>
        <description language="en" name="Burns Night (Burns Supper)" type="local" region="Scotland only"/>
        <definition>
            <fixed month="January" day="25"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="St. Patrick's Day" type="bank holiday" region="Northern Ireland only"/>
        <definition firstyear="1971">
            <fixed day="17" month="March"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Good Friday" type="bank holiday"/>
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Easter Sunday"/>
        <definition>
            <easter/>
        </definition>
    </holiday>
        
    <holiday>
        <description language="en" name="Easter Monday" type="bank holiday" region="except Scotland"/>
        <!-- In 1871, the first legislation relating to bank holidays was
             passed when Sir John Lubbock introduced the Bank Holidays
             Act 1871 -->
        <definition firstyear="1871">
            <easter/>
            <add days="+1"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Saint_David%27s_Day
        The date was declared a national day of celebration within Wales in the 18th century.-->
    <holiday>
        <description language="en" name="Saint David's Day" type="local" region="Wales, Catholics"/>
        <!-- 1801 is the first year of the 19th century, therfore probably also earlier -->
        <definition firstyear="1801" lastyear="2005">
            <fixed month="March" day="1"/>
        </definition>
        <!-- In 2006 Saint David's Day was officially celebrated on 28 February
             by Roman Catholics and on 2 March by the Anglican Church in Wales,
             because 1 March 2006 was Ash Wednesday, which is a day of penitence
             on which feast days are not celebrated. -->
        <definition firstyear="2006" lastyear="2006">
            <fixed month="February" day="28"/>
        </definition>
        <definition firstyear="2007">
            <fixed month="March" day="1"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Saint_David%27s_Day
        The date was declared a national day of celebration within Wales in the 18th century.-->
    <holiday>
        <description language="en" name="Saint David's Day" type="local" region="Wales, Anglican Church"/>
        <!-- 1801 is the first year of the 19th century, therfore probably also earlier -->
        <definition firstyear="1801" lastyear="2005">
            <fixed month="March" day="1"/>
        </definition>
        <!-- In 2006 Saint David's Day was officially celebrated on 28 February
             by Roman Catholics and on 2 March by the Anglican Church in Wales,
             because 1 March 2006 was Ash Wednesday, which is a day of penitence
             on which feast days are not celebrated. -->
        <definition firstyear="2006" lastyear="2006">
            <fixed month="March" day="2"/>
        </definition>
        <definition firstyear="2007">
            <fixed month="March" day="1"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Mothering_Sunday -->
    <holiday>
        <description language="en" name="Mothering Sunday" type="local"/>
        <definition>
            <easter/>
            <!-- on the fourth Sunday of Lent. -->
            <add days="-21" />
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Saint_patricks_day -->
    <holiday>
        <description language="en" name="Saint Patrick's Day" type="local" region="Northern Ireland"/>
        <definition>
            <fixed month="March" day="17"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Vernal Equinox"/>
        <definition>
            <equinox month="March" timezone="Europe/London"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/London" action="start"/>
        </definition>
    </holiday>
    
    <!-- For England, St. George's Day also marks its National Day -->
    <holiday>
        <description language="en" name="St. George's Day" type="National day of England"/>
        <definition>
            <fixed month="April" day="23"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Wedding of Prince William of Wales and Catherine Middleton" type="bank holiday"/>
        <description language="de" name="Hochzeit von Prinz Prince William von Wales and Catherine Middleton" type="bank holiday"/>
        <definition firstyear="2011" lastyear="2011">
            <fixed month="April" day="29"/>
        </definition>
    </holiday>
    
    <!-- Early May Bank Holiday in Scotland, or, Labour Day in Ireland -->
    <holiday>
        <description language="en" name="May Day Bank Holiday" type="bank holiday"/>
        <definition firstyear="1971" lastyear="1994">
            <fixed day="1" month="May"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
        <!-- For one year only, 1995, this holiday was moved to
             the second Monday in May - i.e., from 1 May to 8 May -
             to commemorate the 50th anniversary of VE Day.  -->
        <definition firstyear="1995" lastyear="1995">
            <rule nth="Second" weekday="Monday" month="May"/>
        </definition>
        <definition firstyear="1996">
            <fixed day="1" month="May"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <holiday valid="false">
        <description language="en" name="Whit Monday" type="bank holiday until 1970" region="in England, Wales, Northern Ireland"/>
        <definition firstyear="1871" lastyear="1970">
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Spring Bank Holiday" type="bank holiday"/>
        <definition firstyear="1971">
            <rule nth="Last" weekday="Monday" month="May"/>
        </definition>
        <!-- For one year only, 2002, this holiday was moved
         to 4 June. This caused it to follow an extra bank
         holiday on 3 June, making a four-day weekend
         to celebrate the Golden Jubilee of Elizabeth II. -->
        <definition firstyear="2002" lastyear="2002">
            <fixed day="4" month="June"/>
        </definition>
        <definition firstyear="2003">
            <rule nth="Last" weekday="Monday" month="May"/>
        </definition>        
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Father%27s_Day -->
    <holiday>
        <description language="en" name="Father's Day"/>
        <definition>
            <rule nth="Third" weekday="Sunday" month="June"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="June Solstice"/>
        <definition>
            <solstice month="June" timezone="Europe/London"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Battle_of_the_Boyne -->
    <holiday>
        <description language="en" name="Battle of the Boyne - Orangemen's Day"
                     type="bank holiday" region="Northern Ireland only"/>
        <description language="ga" name="Cath na Bóinne"/>
        <definition firstyear="1971">
            <fixed day="12" month="July"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Summer Bank Holiday"
                     type="bank holiday" region="in Scotland only"/>
        <definition firstyear="1971">
            <rule nth="First" weekday="Monday" month="August"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Summer Bank Holiday"
                     type="bank holiday" region="in England, Wales and Northern Ireland"/>
        <definition firstyear="1971">
            <rule nth="Last" weekday="Monday" month="August"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Autumnal equinox"/>
        <definition>
            <equinox month="September" timezone="Europe/London"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Daylight Saving Time ends"/>
        <definition>
            <dst timezone="Europe/London" action="end"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Halloween"/>
        <definition>
            <fixed month="October" day="31"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Guy_Fawkes_Night -->
    <holiday>
        <description language="en" name="Guy Fawkes Night (Bonfire Night)"/>
        <definition>
            <fixed month="November" day="5"/>
        </definition>
    </holiday>
    
    <!-- In January 2007, the St Andrew's Day Bank Holiday (Scotland)
         Act 2007 was given royal assent, making 30 November
         (or the nearest Monday if a weekend) a bank holiday in Scotland. -->
    <holiday>
        <description language="en" name="St. Andrew's Day" type="bank holiday"
                     region="Scotland only"/>
        <definition firstyear="2007">
            <fixed day="30" month="November"/>
            <condition ifweekday="Sunday">
                <add days="+1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Autumnal equinox"/>
        <definition>
            <equinox month="September" timezone="Europe/London"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Christmas Day" type="bank holiday"/>
        <definition lastyear="1970">
            <!-- The Bank Holidays Act 1871 does not specify Good Friday and
                 Christmas Day as bank holidays in England, Wales and Ireland
                 because they were already recognised there as common law
                 holidays, and because of common observance, they became
                 customary holidays since before records began. -->
            <fixed day="25" month="December"/>
        </definition>
        <definition firstyear="1971">
            <fixed day="25" month="December"/>
            <condition ifweekday="Saturday">
                <add days="+2"/> <!-- becomes Monday, 27 (Substitute Bank Holiday in lieu of 26 Dec) -->
            </condition>
            <condition  ifweekday="Sunday">
                <add days="+2"/> <!-- becomes Thursday, 27 (Substitute Holiday in lieu of 25 Dec) -->
            </condition>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Boxing Day, St. Stephen's Day" type="bank holiday"/>
        <definition lastyear="1970">
            <fixed day="26" month="December"/>
        </definition>
        <definition firstyear="1971">
            <fixed day="26" month="December"/>
            <condition ifweekday="Saturday">
                <add days="+2"/> <!-- becomes Monday, 28 (Substitute Bank Holiday in lieu of 26 Dec) -->
            </condition>
            <condition  ifweekday="Sunday">
                <add days="+2"/> <!-- becomes Thursday, 28 (Substitute Holiday in lieu of 25 Dec) -->
            </condition>            
        </definition>
    </holiday> 

</holidays>