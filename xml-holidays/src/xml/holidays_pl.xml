<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="PL">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Poland -->

    <holiday name="Nowy Rok (Nowy Rok)" type="public holiday" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <!-- In February 2004, 2 May was named Flag Day; it was not, however,
         made a public holiday. -->
    <holiday name="Dzień Flagi Rzeczypospolitej Polskiej" type="non public holiday" international="Flag of the Republic of Poland Day (Flag Day)">
        <definition firstyear="2004">
            <fixed month="February" day="2"/>
        </definition>
    </holiday>

    <holiday name="DST start" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Warsaw" action="start"/>
        </definition>
    </holiday>

    <holiday name="pierwszy dzień Wielkiej Nocy (Niedziela Wielkanocna)" type="public holiday">
        <import name="Easter Sunday"/>
    </holiday>

    <holiday name="drugi dzień Wielkiej Nocy (Poniedziałek Wielkanocny)" type="public holiday">
        <import name="Easter Monday"/>
    </holiday>

    <holiday name="Święto Państwowe (Święto Pracy)" type="public holiday" international="State Holiday">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday name="Święto Narodowe Trzeciego Maja (Święto Konstytucji Trzeciego Maja)" type="public holiday"
             international="National 3rd of May Holiday">
        <definition>
            <fixed month="May" day="3"/>
        </definition>
    </holiday>

    <holiday name="pierwszy dzień Zielonych Świątek (Zielone Świątki)" type="public holiday">
        <import name="Pentecost"/>
    </holiday>

    <holiday name="dzień Bożego Ciała (Boże Ciało)" type="public holiday" international="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>

    <holiday name="Wniebowzięcie Najświętszej Maryi Panny" type="public holiday" international="Assumption of the Blessed Virgin Mary">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday name="Dzień Wojska Polskiego">
        <definition firstyear="1920">
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday name="DST end" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Warsaw" action="end"/>
        </definition>
    </holiday>

    <holiday name="Wszystkich Świętych" type="public holiday">
        <import name="All Saints’ Day"/>
    </holiday>
    
    <holiday name="Narodowe Święto Niepodległości (Dzień Niepodległości)" type="public holiday"
             international="Independence Day">
        <definition firstyear="1918">
        	<fixed month="November" day="11" />
        </definition>
    </holiday>

    <holiday name="pierwszy dzień Bożego Narodzenia" type="public holiday" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday name="drugi dzień Bożego Narodzenia" type="public holiday">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>

</holidays>

