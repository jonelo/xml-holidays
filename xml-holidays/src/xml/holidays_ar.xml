<holidays country="ar">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Argentina -->

    <!--
     TODO:
     The following are federal non-working religious holidays
     (people of the relevant faiths are excused from work):
     Jewish New Year (Judaism)
     Day of Atonement (Judaism)
     End of Ramadan (Islam)
     Muslim New Year (Islam)
    -->

    <holiday name="Año Nuevo" type="public holiday">
        <import name="New Year's Day"/>
    </holiday>

    <holiday name="Eastern Orthodox Christmas Day"
             type="federal non-working religious holiday (people of the relevant faiths are excused from work)">
        <definition>
            <fixed day="7" month="January"/>
        </definition>
    </holiday> 
    
    <holiday name="Jueves Santo" type="public holiday">
        <import name="Maundy Thursday"/>
    </holiday>
    
    <holiday name="Viernes Santo" type="public holiday">
        <import name="Good Friday"/>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Day_of_Memory_for_Truth_and_Justice -->
    <holiday name="Día de la Memoria por la Verdad y la Justicia"
             type="public holiday"
             international="Day of Memory for Truth and Justice">
        <definition firstyear="1976">
            <fixed day="24" month="March"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Malvinas_Day -->
    <holiday name="Día de los caídos en Malvinas"
             type="public holiday"
             international="Malvinas Day">
        <definition firstyear="1982">
            <fixed day="2" month="April"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Malvinas_Day -->
    <holiday name="Día del Trabajador" type="public holiday"
             international="Labor Day">
        <definition>
            <fixed day="1" month="May"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/May_Revolution -->
    <holiday name="Revolución de Mayo" type="public holiday"
             international="May Revolution">
        <definition firstyear="1810">
            <fixed day="25" month="May"/>
        </definition>
    </holiday>
    
    <holiday name="Día de la Bandera" international="National Flag Day"
             type="public holiday">
        <definition>
            <rule nth="3rd" weekday="Monday" month="June"/>
        </definition>
    </holiday>
    
    <holiday name="Father's Day">
        <definition>
            <rule nth="3rd" weekday="Sunday" month="June"/>
        </definition>
    </holiday>
    
    <holiday name="New Year's Day for indigenous cultures" type="federal non-working religious holiday (people of the relevant faiths are excused from work)">
        <definition>
            <fixed day="21" month="June"/>
        </definition>
    </holiday>


    <!-- http://en.wikipedia.org/wiki/May_Revolution -->
    <holiday name="Día de la Independencia" type="public holiday"
             international="National Independence Day">
        <definition firstyear="1810">
            <fixed day="9" month="July"/>
        </definition>
    </holiday>
    
    <holiday name="Día del Libertador José de San Martín"
        international="Anniversary of the death of General José de San Martín"
        type="public holiday">
        <definition>
            <rule nth="3rd" weekday="Monday" month="August"/>
        </definition>
    </holiday>
    
    <holiday name="Children's Day">
        <definition>
            <rule nth="2nd" weekday="Sunday" month="August"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Columbus_Day -->
    <holiday name="Día de la Raza" international="Columbus Day"
             type="public holiday">
        <definition firstyear="1917">
            <fixed day="12" month="October"/>
            <!--
              If the date falls on a Tuesday or Wednesday,
              the holiday is the preceding Monday.
            -->
            <add days="-1" ifweekday="Tuesday"/> <!-- can become the preceding Monday -->
            <add days="-2" ifweekday="Wednesday"/> <!-- can become the preceding Monday -->
            <!--
              If it falls on a Thursday or a Friday then
              the holiday is the following Monday.
            -->
            <add days="+4" ifweekday="Thursday"/> <!-- can become the following Monday -->
            <add days="+3" ifweekday="Friday"/> <!-- can become the following Monday -->
        </definition>
    </holiday>
    
    <holiday name="Día del Maestro" international="Teacher's Day" type="only observed by primary school students">
        <definition>
            <fixed day="11" month="September"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Mother%27s_Day -->
    <holiday name="Mother's Day">
        <definition>
            <rule nth="3rd" weekday="Sunday" month="October"/>
        </definition>
    </holiday>
    
    <holiday name="Día del Estudiante/Día de la Primavera" international="Student's Day/Spring Day" type="only observed by high-school students">
        <definition>
            <fixed day="21" month="November"/>
        </definition>
    </holiday>   

    <holiday name="Día de la Inmaculada Concepción" type="public holiday">
        <definition>
            <fixed day="8" month="December"/>
        </definition>
    </holiday>
    
    <holiday name="Nochebuena" type="public holiday">
        <import name="Christmas Eve"/>
    </holiday>
    
    <holiday name="Día de Navidad" type="public holiday">
        <import name="Christmas Day"/>
    </holiday>

    <holiday name="Fin de Año" type="public holiday">
        <import name="Christmas Day"/>
    </holiday>
   
    <holiday name="Begin Daylight Saving Time (DST)">
        <definition>
            <dst timezone="America/Buenos_Aires" action="start"/>
        </definition>
    </holiday>
    
    <holiday name="End Daylight Saving Time (DST)">
        <definition>
            <dst timezone="America/Buenos_Aires" action="end"/>
        </definition>
    </holiday>
    
</holidays>