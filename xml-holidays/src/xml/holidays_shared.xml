<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="shared">
    
    <holiday name="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    
    <holiday name="Valentine's Day">
        <definition>
            <fixed month="February" day="14"/>
        </definition>
    </holiday>
    
    <holiday name="Carnival">
        <definition>
            <easter/>
            <add days="-47"/>
        </definition>
    </holiday>
    
    <holiday name="Ash Wednesday">
        <definition>
            <easter/>
            <add days="-46"/>
        </definition>
    </holiday>

    <!-- The Thursday before Easter Sunday -->
    <holiday name="Maundy Thursday">
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>

    <!-- The Friday before Easter Sunday -->
    <holiday name="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday name="Easter Sunday">
        <definition>
            <easter/>
        </definition>
    </holiday>
    
    <holiday name="Easter Monday">
        <definition>
            <easter/>
            <add days="+1"/>
        </definition>
    </holiday>
    
    <holiday name="Ascension of Jesus">
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Pentecost -->
    <holiday name="Pentecost">
        <definition>
            <easter/>
            <add days="+49"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Whit_Monday -->
    <holiday name="Whit Monday">
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>    
    
    <!-- http://en.wikipedia.org/wiki/Corpus_Christi_(feast) -->
    <holiday name="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>
    
    <!-- All Saint's Day is a Christian holy day observed by many Western churches on November 1 -->
    <holiday name="All Saint's Day">
        <definition>
            <fixed month="November" day="1"/>
        </definition>
    </holiday>

    <holiday name="All Soul's Day">
        <definition>
            <fixed month="November" day="2"/>
        </definition>
    </holiday>

    <holiday name="1st Advent">
        <definition>
            <advent/>
        </definition>
    </holiday>
    
    <holiday name="2nd Advent">
        <definition>
            <advent/>
            <add days="+7"/>
        </definition>
    </holiday>
    
    <holiday name="3rd Advent">
        <definition>
            <advent/>
            <add days="+14"/>
        </definition>
    </holiday>
    
    <holiday name="4th Advent">
        <definition>
            <advent/>
            <add days="+21"/>
        </definition>
    </holiday>

    <holiday name="Christmas Eve">
        <definition>
            <fixed month="December" day="24"/>
        </definition>
    </holiday>

    <holiday name="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday name="New Year's Eve">
        <definition>
            <fixed month="December" day="31"/>
        </definition>
    </holiday>
    
</holidays>
