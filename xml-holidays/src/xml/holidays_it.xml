    		<fixed day="15" month="August" />
    	</definition>
    </holiday>
    <holiday name="Ende der Sommerzeit (Uhren 1 h zurückstellen)" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Rome" action="end"/>
        </definition>
    </holiday>
    <holiday name="Ognissanti (Tutti i Santi)" type="gesetzlich">
