<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="cn">
    <!-- China http://www.chinareise.com/frameset.html?http://www.chinareise.com/infos/china/feiertage.html
               http://www.chinakontor.de/linker/index.php?cat=73 -->

	<holiday name="New Year's Day" type="gesetzlich">
        <import name="New Year's Day"/>
    </holiday>
    <holiday name="New Year's weekend">
        <definition>
            <fixed month="January" day="2"/>
        </definition>
    </holiday>
    <holiday name="New Year's weekend">
        <definition>
            <fixed month="January" day="3"/>
        </definition>
    </holiday>
    <holiday name="Chúxī(yè) (Spring Festival Golden Week holiday)" type="gesetzlich">
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, -1);</code>
    </holiday>
    <holiday name="\u0063\u0068\u016B\u006E\u006A\u0069\u00E9 (Chinese New Year, Spring Festival)" type="gesetzlich">
        <code>gc.setChineseNewYear(year);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūèr (Spring Festival Golden Week holiday)" type="gesetzlich">
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +1);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūsān (Spring Festival Golden Week holiday)">
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +2);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūsì (Spring Festival Golden Week holiday)">
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +3);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūwǔ (Spring Festival Golden Week holiday)">
    	<!-- 5.Tag -->
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +4);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūqī (Spring Festival Golden Week holiday)">
    	<!-- 7.Tag -->
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +6);</code>
    </holiday>
    <holiday name="Zhēngyuè Chūjiǒ (Spring Festival Golden Week holiday)">
    	<!-- 9.Tag -->
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +8);</code>
    </holiday>
    <holiday name="\u0079\u0075\u00E1\u006E\u0078\u0069\u0101\u006F\u006A\u0069\u00E9 (Lantern Festival, Shang Yuan Festival)">
    	<!-- 15.Tag -->
        <code>gc.setChineseNewYear(year);gc.add(Calendar.DATE, +14);</code>
    </holiday>
    <!-- Um den fünften April jeden Jahres ist das Qingming-Fest
     ... fehlt (type="gesetzlich") -->
    <holiday name="International Women's Day">
        <definition>
            <fixed month="March" day="8"/>
        </definition>
    </holiday>
    <holiday name="Zhonghe Festival">
        <definition>
            <fixed month="March" day="9"/>
        </definition>
    </holiday>
    <holiday name="Arbor Day (Aufforstungstag)">
        <definition>
            <fixed month="March" day="12"/>
        </definition>
    </holiday>
    <holiday name="Tag der Arbeit" type="gesetzlich" international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    <holiday name="Youth Day">
        <definition>
            <fixed month="May" day="4"/>
        </definition>
    </holiday>
    <holiday name="Children's Day">
        <definition>
            <fixed month="June" day="1"/>
        </definition>
    </holiday>
    <!-- Duanwufle (Drachenbootfest) wird am 5. Tag des fünften Monats nach dem Bauernkalender begangen
      ... fehlt (type="gesetzlich") -->
    <holiday name="Army Day (Gründungstag der chinesischen Volksbefreiungsarmee)">
        <definition>
            <fixed month="August" day="1"/>
        </definition>
    </holiday>
    <holiday name="Lehrertag">
        <definition>
            <fixed month="September" day="10"/>
        </definition>
    </holiday>
    <!-- Zhongqiujie (Mittherbstfest) fällt auf den 15. Tag des achten Monats nach dem Bauernkalender
      ... fehlt (type="gesetzlich") -->
    <holiday name="National Day" type="gesetzlich">
        <definition>
            <fixed month="October" day="1"/>
        </definition>
    </holiday>
    <holiday name="National Day Golden Week holiday" type="gesetzlich">
        <definition>
            <fixed month="October" day="2"/>
        </definition>
    </holiday>
    <holiday name="National Day Golden Week holiday" type="gesetzlich">
        <definition>
            <fixed month="October" day="3"/>
        </definition>
    </holiday>
    <holiday name="National Day Golden Week holiday">
        <definition>
            <fixed month="October" day="4"/>
        </definition>
    </holiday>
    <holiday name="National Day Golden Week holiday">
        <definition>
            <fixed month="October" day="5"/>
        </definition>
    </holiday>
    <holiday name="National Day Golden Week holiday">
        <definition>
            <fixed month="October" day="6"/>
