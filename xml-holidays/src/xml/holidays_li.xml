<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="li">
    <!-- Lichtenstein http://www.tourismus.li/de/navpage-RegionLI-InformationLI-44728.html-->

    <holiday name="Neujahrstag" type="gesetzlich" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    <holiday name="Berchtoldstag (Bankfeiertag)">
        <definition>
            <fixed month="January" day="2"/>
        </definition>
    </holiday>
    <holiday name="Hl. Drei Könige" type="gesetzlich" international="Epiphany">
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>
    <holiday name="Mariä Lichtmess">
        <definition>
            <fixed month="February" day="2"/>
        </definition>
    </holiday>
    <holiday name="Fastnachtsdienstag (Bankfeiertag)">
        <import name="Carnival"/>
    </holiday>
    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Vaduz" action="start"/>
        </definition>
    </holiday>
    <holiday name="Karfreitag (Bankfeiertag)" type="gesetzlich" international="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    <holiday name="Ostersonntag (Ostern)" type="gesetzlich">
        <import name="Easter Sunday"/>
    </holiday>
    <holiday name="Ostermontag (Emmaustag)" type="gesetzlich">
        <import name="Easter Monday"/>
    </holiday>
    <holiday name="Tag der Arbeit" type="gesetzlich">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    <holiday name="Auffahrt" type="gesetzlich">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    <holiday name="Pfingstsonntag (Pfingsten)" type="gesetzlich" international="Whit Sunday">
        <import name="Pentecost"/>
    </holiday>
    <holiday name="Pfingstmontag" type="gesetzlich">
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>
    <holiday name="Fronleichnam" type="gesetzlich" international="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>
    <holiday name="Staatsfeiertag" type="gesetzlich">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>
    <holiday name="Maria Geburt" type="gesetzlich">
        <definition>
            <fixed month="September" day="8"/>
        </definition>
    </holiday>
    <holiday name="Ende der Sommerzeit (Uhren 1 h zurückstellen)" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Vaduz" action="end"/>
        </definition>
    </holiday>
    <holiday name="Allerheiligen" type="gesetzlich" international="All Saints">
        <!-- All Saint's Day is a Christian holy day observed by many Western churches on November 1 -->
        <import name="All Saints’ Day"/>
    </holiday>
    <holiday name="Nikolaus" international="Saint Nicholas Day">
        <definition>
            <fixed month="December" day="6"/>
        </definition>
    </holiday>
    <holiday name="Mariä Empfängnis" type="gesetzlich">
        <definition>
            <fixed month="December" day="8"/>
        </definition>
    </holiday>
    <holiday name="Heiligabend (Bankfeiertage)" international="Christmas Eve">
        <import name="Christmas Eve"/>
    </holiday>
    <holiday name="Weihnachten" type="gesetzlich" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    <holiday name="2. Weihnachtsfeiertag/Stephanstag" type="gesetzlich" international="Boxing Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
    <holiday name="Silvester (Bankfeiertage)" international="New Year's Eve">
        <import name="New Year's Eve"/>
    </holiday>
</holidays>