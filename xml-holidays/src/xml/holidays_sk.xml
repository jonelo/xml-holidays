        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>
    <holiday name="Valentinstag">
        <import name="Valentine's Day"/>
    </holiday>
    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Bratislava" action="start"/>
        </definition>
    </holiday>
    <holiday name="Veľký piatok" type="gesetzlich" international="Good Friday">
        <definition>
            <easter/>
