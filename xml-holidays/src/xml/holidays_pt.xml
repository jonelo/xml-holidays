<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="PT">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Portugal -->

    <holiday name="Ano Novo" type="public holiday" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday name="Carnival" international="Carnival">
        <import name="Carnival"/>
    </holiday>

    <holiday name="DST start" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Lisbon" action="start"/>
        </definition>
    </holiday>

    <holiday name="Sexta-Feira Santa" type="public holiday" international="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    
    <holiday name="Páscoa" type="public holiday">
        <import name="Easter Sunday"/>
    </holiday>
    
    <!-- Celebrates the 1974 Revolution that ended the 
         Dictatorship and started Democracy -->
    <holiday name="Dia da Liberdade" type="public holiday"
             international="Freedom Day">
        <definition firstyear="1974">
        	<fixed month="April" day="25" />
        </definition>
    </holiday>

    <holiday name="Dia do Trabalhador" type="public holiday"
    international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday name="Corpo de Deus" type="public holiday" international="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>

    <holiday name="Dia de Portugal, de Camões e das Comunidades Portuguesas" type="public holiday"
             international="Portugal Day">
        <definition firstyear="1580">
        	<fixed month="June" day="10" />
        </definition>
    </holiday>

    <holiday name="Assunção de Nossa Senhora" type="public holiday" international="Assumption of Mary">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday name="Implantação da República" type="public holiday"
             international="Republic Day">
        <definition firstyear="1910">
        	<fixed month="October" day="5" />
        </definition>
    </holiday>

    <holiday name="DST end" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Lisbon" action="end"/>
        </definition>
    </holiday>

    <holiday name="Todos os Santos" type="public holiday" international="All Saints">
        <import name="All Saints’ Day"/>
    </holiday>

    <holiday name="Restauração da Independência" type="Restoration of Independence">
        <definition>
            <fixed month="December" day="1"/>
        </definition>
    </holiday>

    <holiday name="Imaculada Conceição" type="public holiday" international="Immaculate Conception's day">
        <definition>
            <fixed month="December" day="8"/>
        </definition>
    </holiday>

    <holiday name="Natal" type="public holiday" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

</holidays>
