    <holiday name="Juhannusaatto" type="non official, de facto full holiday"
             international="Midsummer Eve">
        <definition>
            <!-- Friday between June 19 and June 25 -->
            <fixed day="19" month="June"/>
            <goto weekday="Friday" direction="nextpossible"/> <!-- inclusive the 19th-->
        </definition>
    </holiday>

    
    <holiday name="Juhannusaatto" type="public" international="Midsummer Day">
        <!-- Moved from June 24 -->
        <!-- 
        <definition lastyear="????">
            <fixed day="24" month="June"/> 
        </definition>
        -->
        <definition>
            <!-- Saturday between June 20 and June 26 -->
            <fixed day="20" month="June"/>
            <goto weekday="Saturday" direction="nextpossible"/> <!-- inclusive the 20th-->
        </definition>
    </holiday>

    <holiday name="Pyhäinpäivä" type="public" international="All Saints' Day">
        <!-- Saturday between October 31 and November 6 -->
        <definition>
            <fixed day="31" month="October"/>
            <goto weekday="Saturday" direction="nextpossible"/>
        </definition>
    </holiday>

