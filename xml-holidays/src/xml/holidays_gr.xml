<holidays country="gr">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Greece -->

    <holiday name="Πρωτοχρονιά / Protochronia" type="public holiday">
        <import name="New Year's Day"/>
    </holiday>
    
    <holiday name="Θεοφάνεια / Theofania" type="public holiday"
             international="Epiphany">
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>
    
    <holiday name="Τριών Ιεραρχών / Trion Ierarchon" type="school holiday only"
             international="The Three Holy Hierarchs">
        <definition>
            <fixed month="January" day="30"/>
        </definition>
    </holiday>
    
    <holiday name="Καθαρή Δευτέρα / Kathari Devtera" type="public holiday"
             international="Ash Monday (eastern churches)">
        <definition>
            <easter church="eastern"/>
            <add days="-48"/>
        </definition>
    </holiday>
    
    <holiday name="Ευαγγελισμός Θεοτόκου / Eikosti-pempti Martiou" type ="public holiday"
             international="25th of March">
        <definition>
            <fixed month="March" day="25"/>
        </definition>
    </holiday>
    
    <holiday name="Begin Daylight Saving Time" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Athens" action="start"/>
        </definition>
    </holiday>
    
    <holiday name="Κυριακή του Πάσχα / Kyriaki tou Pascha"
             international="Easter Sunday (eastern churches)">
        <definition>
            <easter church="eastern"/>
        </definition>
    </holiday>
    
    <holiday name="Δευτέρα του Πάσχα / Deutera tou Pascha" type="public holiday"
             international="Easter Monday (eastern churches)">
        <definition>
            <easter church="eastern"/>
            <add days="+1"/>
        </definition>
    </holiday>
    
    <holiday name="Εργατική Πρωτομαγιά / Ergatiki Protomagia" type="public holiday"
             international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    
    <holiday name="Πνευματος / Pnevmatos" type="public holiday"
             international="Pentecost (eastern churches)">
        <definition>
            <easter church="eastern"/>
            <add days="+49"/>
        </definition>
    </holiday>
    
    <holiday name="Αγιου Πνευματος / Tou Agiou Pnevmatos" type="public holiday"
             international="Pentecost Monday (eastern churches)">
        <definition>
            <easter church="eastern"/>
            <add days="+50"/>
        </definition>
    </holiday>
    
    <holiday name="Η Κοίμησις της Θεοτόκου / Panaghias" type="public holiday"
             international="The Dormition of the Holy Virgin">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>
    
    <holiday name="End Daylight Saving Time"
             international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Athens" action="end"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Oxi_Day -->
    <holiday name="Το Όχι / To Ochi" type="public holiday"
             international="The Ochi day">
        <definition firstyear="1942">
            <fixed month="October" day="28"/>
        </definition>
    </holiday>
    
    <holiday name="Πολυτεχνείο / Polytechneio" type="school holiday only"
             international="Polytechneio">
        <definition firstyear="1973">
            <fixed month="November" day="17"/>
        </definition>
    </holiday>
    
    <holiday name="Χριστούγεννα / Christougenna" type="public holiday"
             international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    
    <holiday name="Σύναξις Θεοτόκου / Synaxis Theotokou" type="public holiday"
             international="Boxing Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
</holidays>