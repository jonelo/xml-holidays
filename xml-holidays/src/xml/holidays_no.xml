<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="NO">
    <!-- http://en.wikipedia.org/wiki/Holidays_in_Norway -->
    
    <holiday type="public holiday">
        <names>
            <name language="no" text="Nyttårsdag" official="true"/>
            <name language="en" text="New Year's Day"/> 
        </names>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <names>
            <name language="en" text="Begin Daylight Saving Time"/>
        </names>
        <definition>
            <dst timezone="Europe/Oslo" action="start"/>
        </definition>
    </holiday>

    <holiday>
        <names>
            <name language="no" text="Palmesøndag" official="true"/>
            <name language="en" text="Palm Sunday"/>
        </names>
        <definition>
            <easter/>
            <add days="-7"/>
        </definition>
    </holiday>

    <holiday>
        <names>
            <name language="no" text="Skjærtorsdag" official="true"/>
            <name language="en" text="Maundy Thursday"/>
        </names>
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Langfredag" official="true"/>
            <name language="en" text="Good Friday" />
        </names>
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Første påskedag" official="true"/>
            <name language="en" text="Easter Sunday"/>
        </names>
        <import name="Easter Sunday"/>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Andre påskedag" official="true"/>
        </names>
        <import name="Easter Monday"/>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Første mai" official="true"/>
            <name language="en" text="Labour Day"/>
        </names>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Syttende mai or Grunnlovsdagen" official="true"/>
            <name language="en" text="Constitution Day"/>
        </names>
        <definition firstyear="1814">
        	<fixed month="May" day="17" />
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Kristi himmelfartsdag" official="true"/>
            <name language="en" text="Ascension Day"/>
        </names>
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Første pinsedag" official="true"/>
            <name language="en" text="Whit Sunday"/>
        </names>    
        <import name="Pentecost"/>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="" text="Andre pinsedag" official="true"/>
            <name language="en" text="Whit Monday"/>
        </names>    
        <definition>
            <easter/>
            <add days="+51"/>
        </definition>
    </holiday>

    <holiday>
        <names>
            <name language="en" text="End Daylight Saving Time"/>
        </names>    
        <definition>
            <dst timezone="Europe/Oslo" action="end"/>
        </definition>
    </holiday>

    <holiday>
        <names>
            <name language="no" text="Julaften" official="true"/>
            <name language="en" text=""/>
        </names>    
        <import name="Christmas Eve"/>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Første juledag" official="true"/>
            <name language="en" text="Christmas Day"/>
        </names>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday type="public holiday">
        <names>
            <name language="no" text="Andre juledag" official="true"/>
            <name language="en" text="Boxing Day"/>
        </names>    
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>

</holidays>

