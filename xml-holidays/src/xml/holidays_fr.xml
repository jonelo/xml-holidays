    http://xml-holidays.sourceforge.net/
    Thank you for keeping the comment.
-->
<holidays country="fr">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_France -->

    <holiday name="Jour de l'An">
        <import name="New Year's Day"/>
    </holiday>
    
    <holiday name="Valentinstag">
        <import name="Valentine's Day"/>
    </holiday>
    
    <holiday name="Équinoxe mars">
        <definition>
            <equinox type="March" timezone="Europe/Paris"/>
        </definition>
    </holiday>
    
    <holiday name="Begin Daylight Saving Time" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Paris" action="start"/>
        </definition>
    </holiday>
    
    <holiday name="Pâques">
        <import name="Easter Sunday"/>
    </holiday>   
    
    <holiday name="Lundi de Pâques">
        <import name="Easter Monday"/>
    </holiday>
    
    <holiday name="Fête du Travail" type="public holiday" international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    
    <holiday name="Ascension" international="Ascension Day">
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    
    <holiday name="Victoire 1945" international="V-E Day">
        <definition firstyear="1945">
            <fixed month="May" day="8"/>
        </definition>
    </holiday>
    
    <holiday name="Pentecôte">
        <import name="Pentecost"/>
    </holiday>
    
    <holiday name="Lundi de Pentecôte">
        <import name="Whit Monday"/>
    </holiday>
    
    <!-- http://fr.wikipedia.org/wiki/F%C3%AAte_des_M%C3%A8res -->
    <!-- http://en.wikipedia.org/wiki/Mother%27s_Day#Dates_around_the_world -->
    <holiday name="Fête des Mères">
        <definition>
            <rule nth="Last" weekday="Sunday" month="May"/>
            
            <!-- First Sunday of June if Pentecost occurs on this day -->
            <rule nth="1st" weekday="Sunday" month="June" ifday="Pentecôte"/>
        </definition>
    </holiday>
    
    <holiday name="Solstice juin">
        <definition>
            <solstice type="June" timezone="Europe/Paris"/>
        </definition>
    </holiday>
    
    <holiday name="Fête Nationale" international="Bastille Day">
        <definition>
            <fixed month="July" day="14"/>
        </definition>
    </holiday>
    
    <holiday name="Assomption" international="Assumption of Mary">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>
    
    <holiday name="Équinoxe sept">
        <definition>
            <equinox type="September" timezone="Europe/Paris"/>
        </definition>
    </holiday>
    
    <holiday name="End Daylight Saving Time" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Paris" action="end"/>
        </definition>
    </holiday>
    
    <holiday name="Toussaint">
        <import name="All Saint's Day"/>
    </holiday>
    
    <holiday name="Armistice 1918" international="Veterans Day">
        <definition firstyear="1918">
            <fixed month="November" day="11"/>
        </definition>
    </holiday>
    
    <holiday name="Solstice déc">
        <definition>
            <solstice type="December" timezone="Europe/Paris"/>
        </definition>
    </holiday> 
    
    <holiday name="Noël">
        <import name="Christmas Day"/>
    </holiday>
    
    <holiday name="La Saint-Sylvestre">
        <import name="New Year's Eve"/>
    </holiday>
    
</holidays>