        <definition>
            <equinox month="March" timezone="Europe/Vienna"/>
        </definition>
    </holiday>
    
    <holiday name="Sommeranfang (Sommersonnenwende)" international="Solstice June">
        <definition>
            <solstice month="June" timezone="Europe/Vienna"/>
        </definition>
    </holiday>
    
    <holiday name="Herbstanfang" international="Equinox September">
        <definition>
            <equinox month="September" timezone="Europe/Vienna"/>
