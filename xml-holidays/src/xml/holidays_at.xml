<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="at">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Austria.html#Austria -->

    <holiday name="Neujahrstag" type="gesetzlich">
        <import name="New Year's Day"/>
    </holiday>

    <holiday name="Hl. Drei Könige" international="Three Kings Day">
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>

    <holiday name="Josef" type="local [Kärnten, Steiermark, Tirol, Vorlarlberg]">
        <definition>
            <fixed month="March" day="19"/>
        </definition>
    </holiday>

    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Start Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Vienna" action="start" />
        </definition>
    </holiday>

    <holiday name="Karfreitag">
        <import name="Good Friday"/>
    </holiday>

    <holiday name="Ostersonntag (Ostern)">
        <import name="Easter Sunday"/>
    </holiday>

    <holiday name="Ostermontag">
        <import name="Easter Monday"/>
    </holiday>

    <holiday name="Staatsfeiertag (Tag der Arbeit)" international="Labour Day">
        <definition>
            <fixed day="1" month="May" />
        </definition>
    </holiday>

    <holiday name="Florian" type="local [Oberösterreich]">
        <definition>
            <fixed day="4" month="May" />	
        </definition>
    </holiday>

    <holiday name="Christi Himmelfahrt">
        <import name="Ascension of Jesus"/>
    </holiday>

    <holiday name="Pfingstsonntag (Pfingsten)">
        <import name="Pentecost"/>
    </holiday>

    <holiday name="Pfingstmontag">
        <import name="Whit Monday"/>
    </holiday>

    <holiday name="Fronleichnam">
        <import name="Corpus Christi"/>
    </holiday>

    <holiday name="Mariä Himmelfahrt">
        <definition>
            <fixed day="15" month="August" />	
        </definition>
    </holiday>

    <holiday name="Rupert" type="local [Salzburg]">
        <definition>
            <fixed day="24" month="September" />	
        </definition>
    </holiday>

    <holiday name="Tag der Volksabstimmung" type="local [Kärnten]">
        <definition firstyear="1920">
            <fixed day="10" month="October" />	
        </definition>
    </holiday>

    <holiday name="Nationalfeiertag">
        <definition firstyear="1965">
            <fixed day="26" month="October" />	
        </definition>
    </holiday>

    <holiday name="Ende der Sommerzeit (Uhren 1 h zurückstellen)" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Vienna" action="end" />	
        </definition>
    </holiday>

    <holiday name="Weltspartag (gefeiert)">
        <import name="Weltspartag (gefeiert)"/>
    </holiday>

    <holiday name="Weltspartag (offiziell)">
        <import name="Weltspartag (offiziell)"/>
    </holiday>

    <holiday name="Allerheiligen">
        <import name="All Saints' Day"/>
    </holiday>

    <holiday name="Martin" type="local [Burgenland]">
        <definition>
            <fixed day="11" month="November"/>		
        </definition>
    </holiday>

    <holiday name="Leopold" type="local [Niederösterreich, Wien]">
        <definition>
            <fixed day="15" month="November"/>	
        </definition>
    </holiday>

    <holiday name="Mariä Empfängnis" international="Immaculate Conception">
        <definition>
            <fixed day="8" month="December"/>		
        </definition>
    </holiday>

    <holiday name="Heiliger Abend">
        <definition>
            <fixed day="24" month="December"/>		
        </definition>
    </holiday>

