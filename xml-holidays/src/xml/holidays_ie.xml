    http://xml-holidays.sourceforge.net/
    Thank you for keeping the comment.
-->
<holidays country="ie">
    <!-- http://www.irlandguide.de/feiertage-in-irland/35/ 
         http://en.wikipedia.org/wiki/Public_holidays_in_the_Republic_of_Ireland
         http://www.citizensinformation.ie/categories/employment/employment-rights-and-conditions/leave-and-holidays/public-holidays-in-ireland
      -->

    <holiday name="New Year's Day" type="public holiday">
        <import name="New Year's Day"/>
    </holiday>
    
    <holiday name="St. Patrick's Day" type="public holiday">
        <definition>
            <fixed month="March" day="17"/>
        </definition>
    </holiday>
    
    <holiday name="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Dublin" action="start"/>
        </definition>
    </holiday>
    
    <!-- Good Friday is not a public holiday in the Republic of Ireland -->
    <holiday name="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    
    <holiday name="Easter">
        <import name="Easter Sunday"/>
    </holiday>
    
    <holiday name="Easter Monday" type="public holiday">
        <import name="Easter Monday"/>
    </holiday>
    
    <holiday name="May Day" type="public holiday">
        <definition>
            <rule weekday="Monday" month="May" nth="First"/>
        </definition>
    </holiday>
    
    <holiday name="Spring Bank Holiday" type="local [Northern Ireland]">
        <definition>
            <rule weekday="Monday" month="May" nth="Last"/>
        </definition>
    </holiday>
    
    <holiday name="June Bank Holiday" type="public holiday">
        <definition>
            <rule weekday="Monday" month="June" nth="First"/>
        </definition>
    </holiday>
    
    <holiday name="Battle of the Boyne Day" type="local [Northern Ireland]">
        <definition>
            <fixed month="July" day="12"/>
        </definition>
    </holiday>
    
    <holiday name="August Bank Holiday" type="public holiday">
        <definition>
            <rule weekday="Monday" month="August" nth="First"/>
        </definition>
    </holiday>
    
    <holiday name="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Dublin" action="end"/>
        </definition>
    </holiday>
    
    <holiday name="October Bank Holiday" type="public holiday">
        <definition>
            <rule weekday="Monday" month="October" nth="Last"/>
        </definition>
    </holiday>
    
    <holiday name="Christmas Day" type="public holiday" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    
    <holiday name="St. Stephen's Day" type="public holiday">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
    
</holidays>
