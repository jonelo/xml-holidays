<holidays country="ch">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Switzerland -->
    
    <holiday name="Neujahr / Nouvel an / Capodanno / Bumaun" type="public">
        <import name="New Year's Day"/>
    </holiday>
    
    <holiday name="Berchtoldstag (Bächtelistag) / Saint Berchtold / San Basilio / Firà da Bumaun" 
             type="public; AG (partly), BE, FR, GL, JU, LU, NE, OW, SH, SO, TG, VD, ZG, ZH" 
             international="Saint Berchtold">
        <definition>
            <fixed day="2" month="January"/>
        </definition>
    </holiday>
    
    <holiday name="Heilige drei Könige / Epiphanie / Epifania"
             type="public; GR (partly), SZ, TI, UR, LU" 
             international="Epiphany">
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>

    <holiday name="Valentinstag">
        <definition>
            <fixed day="14" month="January" />
        </definition>
    </holiday>

    <holiday name="Josefstag / Saint Joseph / San Giuseppe"
             type="public; cath. regions: GR (partly), LU (partly), NW, SO (partly), SZ, TI, UR, VS"
             international="Saint Joseph's Day">
           <!-- TODO:       <definition firstyear="1729"> -->
        <definition>
            <fixed day="19" month="March" />
        </definition>
    </holiday>

    <!-- 6 days before Ash Wednesday -->
    <holiday name="Fat Thursday"
             type="regional; LU, NW, UR"
             international="Fat Thursday">
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-6"/>
        </definition>
    </holiday>

    <!-- Monday, Tuesday before Ash Wednesday 
         SZ, GL only Monday-->
    <holiday name="Carnival"
             type="regional; SZ, GL"
             international="Carnival">
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-2"/> <!-- Monday -->
        </definition>
    </holiday>

    <!-- Monday, Tuesday before Ash Wednesday -->
    <holiday name="Carnival"
             type="regional; SZ"
             international="Carnival">
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-1"/> <!-- Tuesday -->
        </definition>
    </holiday>
    
    <!-- Monday, Tuesday, Wednesday after Ash Wednesday -->
    <holiday name="Carnival in Basel (begin)"
             type="regional; only BS"
             international="Carnival in Basel (begin)">
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="+5"/> <!-- Monday -->
        </definition>
    </holiday>

    <!-- Monday, Tuesday, Wednesday after Ash Wednesday -->
    <holiday name="Carnival in Basel (end)"
             type="regional; only BS"
             international="Carnival in Basel (end)">
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="+7"/> <!-- Monday -->
        </definition>
    </holiday>

    <holiday name="Republic's day" type="regional; only NE">
        <definition>
            <fixed day="1" month="March"/>
        </definition>
    </holiday>

    <holiday name="Näfelser Fahrt" type="regional; only GL">
        <definition>
            <rule nth="First" weekday="Thursday" month="April"/>
        </definition>
    </holiday>
