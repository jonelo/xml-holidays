    <!-- Thursday following the first Sunday in September -->
    <holiday name="Jeûne genevois" type="regional; only GE">
        <definition>
            <rule nth="First" weekday="Sunday" month="September"/>
            <add days="5"/> <!-- Thursday -->
        </definition>
    </holiday>
    
    <!-- Second weekend (and afternoon of following Monday) in September -->
    <holiday name="Knabenschiessen (begin)"
             type="regional; only city (and agglomeration) of Zurich">
        <definition>
            <rule nth="Second" weekday="Saturday" month="September"/>
        </definition>
    </holiday>

    <!-- Second weekend (and afternoon of following Monday) in September -->
    <holiday name="Knabenschiessen (end)"
             type="regional; only city (and agglomeration) of Zurich">
        <definition>
            <rule nth="Second" weekday="Saturday" month="September"/>
            <add days="2"/>
        </definition>
    </holiday>

    
