    <!-- The Public Holidays Act (Act No 36 of 1994) determines that whenever
         any public holiday falls on a Sunday, the Monday following it will be
         a public holiday.
     -->

    <holiday>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <description language="zul" name="Uncibijane"/>
        <description language="xho" name="Umhla Wonyaka Omtsha"/>
        <description language="afr" name="Nuwejaarsdag"/>
        <description language="nso" name="Letšatši la Ngwaga o Moswa"/>
        <description language="tsn" name="Letsatsi la Ngwaga o Mosha"/>
        <description language="sot" name="Selemo se Setjha"/>
        <description language="tso" name="Siku ra Lembe lerintshwa"/>
        <description language="ssw" name="Lilanga Lemnyaka Lomusha"/>
        <description language="ven" name=""/>
        <description language="nbl" name="ILanga loNyaka omuTjha"/>
        <definition firstyear="1910" lastyear="1993">
            <fixed month="January" day="1"/>
        </definition>
        <definition firstyear="1994">
            <fixed month="January" day="1"/>
            <condition ifweekday="Sunday">
                <add days="1"/> <!-- will become Monday -->
            </condition>
        </definition>
    </holiday>

