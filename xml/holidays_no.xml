<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">
<!--
    This file is from the free xml-holidays project. See also
    https://github.com/jonelo/xml-holidays/
    Thank you for keeping the comment.
-->
<holidays country="NO">
    <!-- http://en.wikipedia.org/wiki/Holidays_in_Norway -->

    <default language="no"/>
    
    <holiday>
        <description language="no" name="Nyttårsdag"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Oslo" action="start"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Palmesøndag"/>
        <description language="en" name="Palm Sunday"/>
         <definition>
            <easter/>
            <add days="-7"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Skjærtorsdag"/>
        <description language="en" name="Maundy Thursday"/>
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Langfredag"/>
        <description language="en" name="Good Friday" type="public holiday"/>
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Første påskedag"/>
        <description language="en" name="Easter Sunday" type="public holiday"/>
        <import id="Easter Sunday"/>
    </holiday>

    <holiday>
        <description language="no" name="Andre påskedag"/>
        <description language="en" name="Easter Monday" type="public holiday"/>
        <import id="Easter Monday"/>
    </holiday>

    <holiday>
        <description language="no" name="Første mai"/>
        <description language="en" name="Labour Day" type="public holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <!-- http://no.wikipedia.org/wiki/Morsdag -->
    <holiday>
        <description language="no" name="Morsdag"/>
        <description language="de" name="Muttertag"/>
        <description language="en" name="Mother's Day"/>
        <definition firstyear="1919">
            <rule nth="Second" weekday="Sunday" month="February"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Syttende mai or Grunnlovsdagen"/>
        <description language="en" name="Constitution Day" type="public holiday"/>
        <definition firstyear="1814">
        	<fixed month="May" day="17" />
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Kristi himmelfartsdag"/>
        <description language="en" name="Ascension Day" type="public holiday"/>
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Første pinsedag"/>
        <description language="en" name="Whit Sunday" type="public holiday"/>
        <import id="Pentecost"/>
    </holiday>

    <holiday>
        <description language="" name="Andre pinsedag"/>
        <description language="en" name="Whit Monday" type="public holiday"/>
        <definition>
            <easter/>
            <add days="+51"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="End Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Oslo" action="end"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Julaften"/>
        <description language="en" name="Christmas Eve"/>
        <import id="Christmas Eve"/>
    </holiday>

    <holiday>
        <description language="no" name="Første juledag"/>
        <description language="en" name="Christmas Day" type="public holiday"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday>
        <description language="no" name="Andre juledag"/>
        <description language="en" name="Boxing Day" type="public holiday"/>
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>

</holidays>

