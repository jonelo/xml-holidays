    <!-- 6 days before Ash Wednesday -->
    <holiday>
        <description language="en" name="Fat Thursday" region="LU, NW, UR"/>
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-6"/>
        </definition>
    </holiday>

    <!-- Monday, Tuesday before Ash Wednesday 
         SZ, GL only Monday-->
    <holiday>
        <description language="en" name="Carnival" region="SZ, GL"/>
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-2"/> <!-- Monday -->
        </definition>
    </holiday>

    <!-- Monday, Tuesday before Ash Wednesday -->
    <holiday>
        <description language="en" name="Carnival" region="SZ"/>
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="-1"/> <!-- Tuesday -->
        </definition>
    </holiday>
    
    <!-- Monday, Tuesday, Wednesday after Ash Wednesday -->
    <holiday>
        <description language="en" name="Carnival in Basel (begin)" region="only BS"/>
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="+5"/> <!-- Monday -->
        </definition>
    </holiday>

    <!-- Monday, Tuesday, Wednesday after Ash Wednesday -->
    <holiday>
        <description language="en" name="Carnival in Basel (end)"
                     region="only BS"/>
        <definition>
            <easter/>
            <add days="-46"/> <!-- Ash Wednesday -->
            <add days="+7"/> <!-- Monday -->
        </definition>
    </holiday>

    <holiday>
