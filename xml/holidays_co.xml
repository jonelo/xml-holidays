    <holiday>
        <description language="es" name="Sagrado Corazón"/>
        <description language="en" name="Sacred Heart" type="public holiday"/>
        <definition>
            <!-- observed the Monday ten weeks and a day after Easter Sunday -->
            <easter/>
            <add days="71"/>
        </definition>
    </holiday>
    
    <holiday>
