<holidays country="CO">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Colombia 
         http://es.wikipedia.org/wiki/Fiestas_de_Colombia -->

    <default language="es"/>

    <holiday>
        <description language="es" name="Año Nuevo"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <import id="New Year's Day"/>
    </holiday>
    
    <holiday>
        <description language="es" name="Día de los Reyes Magos"/>
        <description language="en" name="Epiphany" type="public holiday"/>
        <definition>
            <fixed day="6" month="January"/>
            <!--
              Movable holiday: when it does not fall on a Monday,
              the holiday is observed on the following Monday.
            -->
            <condition ifweekday="Tuesday">
                <add days="6"/>
            </condition>
            <condition ifweekday="Wednesday">
                <add days="5"/>
            </condition>
            <condition ifweekday="Thursday">
                <add days="4"/>
            </condition>
            <condition ifweekday="Friday">
                <add days="3"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="2"/>
            </condition>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
        </definition>
    </holiday>
    
    
    <holiday>
        <description language="es" name="Día del Maestro"/>
        <description language="en" name="Teacher's Day" type="public holiday"/>
        <definition>
            <fixed day="15" month="May"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="es" name="Día de San José"/>
