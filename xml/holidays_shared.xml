<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">
<!--
    This file is from the free xml-holidays project. See also
    https://github.com/jonelo/xml-holidays/
    Thank you for keeping the comment.
-->
<holidays country="shared">

    <default language="en"/>
    
    <holiday id="New Year's Day">
        <description language="en" name="New Year's Day"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    
    <holiday id="Valentine's Day">
        <description language="en" name="Valentine's Day"/>
        <definition>
            <fixed month="February" day="14"/>
        </definition>
    </holiday>
    
    <holiday id="Carnival">
        <description language="en" name="Carnival"/>
        <definition>
            <easter/>
            <add days="-47"/>
        </definition>
    </holiday>
    
    <holiday id="Ash Wednesday">
        <description language="en" name="Ash Wednesday"/>
        <definition>
            <easter/>
            <add days="-46"/>
        </definition>
    </holiday>

    <!-- The Thursday before Easter Sunday -->
    <holiday id="Maundy Thursday">
        <description language="en" name="Maundy Thursday"/>
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>

    <!-- The Friday before Easter Sunday -->
    <holiday id="Good Friday">
        <description language="en" name="Good Friday"/>
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday id="Easter Sunday">
        <description language="en" name="Easter Sunday"/>
        <definition>
            <easter/>
        </definition>
    </holiday>
    
    <holiday id="Easter Monday">
        <description language="en" name="Easter Monday"/>
        <definition>
            <easter/>
            <add days="+1"/>
        </definition>
    </holiday>
    
    <holiday id="Ascension of Jesus">
        <description language="en" name="Ascension of Jesus"/>
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Pentecost -->
    <holiday id="Pentecost">
        <description language="en" name="Pentecost"/>
        <definition>
            <easter/>
            <add days="+49"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Whit_Monday -->
    <holiday id="Whit Monday">
        <description language="en" name="Whit Monday"/>
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>    
    
    <!-- http://en.wikipedia.org/wiki/Corpus_Christi_(feast) -->
    <holiday id="Corpus Christi">
        <description language="en" name="Corpus Christi"/>
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>
    
    <!-- All Saint's Day is a Christian holy day observed by many Western churches on November 1 -->
    <holiday id="All Saint's Day">
        <description language="en" name="All Saint's Day"/>
        <definition>
            <fixed month="November" day="1"/>
        </definition>
    </holiday>

    <holiday id="All Soul's Day">
        <description language="en" name="All Soul's Day"/>
        <definition>
            <fixed month="November" day="2"/>
        </definition>
    </holiday>

    <holiday id="1st Advent">
        <description language="en" name="1st Advent"/>
        <definition>
            <advent/>
        </definition>
    </holiday>
    
    <holiday id="2nd Advent">
        <description language="en" name="2nd Advent"/>
        <definition>
            <advent/>
            <add days="+7"/>
        </definition>
    </holiday>
    
    <holiday id="3rd Advent">
        <description language="en" name="3rd Advent"/>
        <definition>
            <advent/>
            <add days="+14"/>
        </definition>
    </holiday>
    
    <holiday id="4th Advent">
        <description language="en" name="4th Advent"/>
        <definition>
            <advent/>
            <add days="+21"/>
        </definition>
    </holiday>

    <holiday id="Christmas Eve">
        <description language="en" name="Christmas Eve"/>
        <definition>
            <fixed month="December" day="24"/>
        </definition>
    </holiday>

    <holiday id="Christmas Day">
        <description language="en" name="Christmas Day"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday id="New Year's Eve">
        <description language="en" name="New Year's Eve"/>
        <definition>
            <fixed month="December" day="31"/>
        </definition>
    </holiday>
    
</holidays>
