        <!-- Es fand erstmals am 17. Oktober 1810 statt. -->
        <definition firstyear="1810" lastyear="1812">
            <fixed day="17" month="October"/>
        </definition>
        
        <!-- Im Jahr 1813 fiel das Fest allerdings aus, da
