        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Giorno della Vittoria"/>
        <description language="en" name="Victory Day" type="public holiday"/>
        <definition firstyear="1918">
            <fixed day="4" month="November"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Immacolata Concezione (Immacolata)"/>
        <description language="en" name="Immaculate Conception" type="public holiday"/>
        <definition>
