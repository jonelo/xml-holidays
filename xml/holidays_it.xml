<holidays country="IT">
    <!-- Italy -->
    <!-- http://en.wikipedia.org/wiki/Holidays_in_Italy
         http://de.wikipedia.org/wiki/Feiertage_in_Italien
      -->

    <default language="it"/>

    <holiday>
        <description language="it" name="Capodanno"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <import id="New Year's Day"/>
    </holiday>
    
    <holiday>
        <description language="it" name="Epifania"/>
        <description language="en" name="Epiphany" type="public holiday"/>
        <definition>
            <fixed day="6" month="January" />
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Rome" action="start"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Pasqua"/>
        <description language="en" name="Easter Sunday" type="public holiday"/>
        <definition>
            <easter/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="LunedÃ¬ dell'Angelo, Pasquetta"/>
        <description language="en" name="Easter Monday" type="public holiday"/>
        <definition>
            <easter/>
            <add days="+1"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Festa della Liberazione"/>
        <description language="en" name="Anniversary of Liberation" type="public holiday"/>
        <definition firstyear="1945">
            <fixed day="25" month="April"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Festa dei Lavoratori"/>
        <description language="en" name="Labor Day" type="public holiday"/>
        <definition>
            <fixed day="1" month="May"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Festa della Repubblica"/>
        <description language="en" name="Republic Day" type="public holiday"/>
        <definition firstyear="1946">
            <fixed day="2" month="June"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="San Giovanni"/>
        <definition>
            <fixed day="24" month="June"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Assunzione (Ferragosto)"/>
        <description language="en" name="Ferragosto/Assumption Day" type="public holiday"/>
        <definition>
            <fixed day="15" month="August"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="End Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Rome" action="end"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="it" name="Ognissanti (Tutti i Santi)"/>
        <description language="en" name="All Saints" type="public holiday"/>
