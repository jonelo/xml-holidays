            <fixed month="March" day="12"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Tomb-Sweeping Day (Qingming Festival)" type="traditional"/>
        <description language="zh" name="清明节" type="public"/>
        <definition>
            <equinox month="March" timezone="Asia/Shanghai"/>
            <add days="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Labour Day" type="traditional"/>
        <description language="zh" name="劳动节" type="traditional"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
