<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE holidays SYSTEM "holidays.dtd">

<holidays country="CN">
    <!--
        https://en.wikipedia.org/wiki/Public_holidays_in_China
    -->

    <default language="zh"/>

    <holiday>
        <description language="en" name="New Year's Day" type="public"/>
        <description language="zh" name="元旦" type="public"/>
        <import id="New Year's Day"/>
    </holiday>

    <holiday>
        <description language="en" name="Spring Festival (Chinese New Year's Eve)" type="public"/>
        <description language="zh" name="春节 (Eve)" type="public"/>
        <definition firstyear="2008" lastyear="2013">
            <lunisolar month="1" day="1"/>
            <add days="-1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Spring Festival (Chinese New Year, 1st day)" type="public"/>
        <description language="zh" name="春节 (1st day)" type="public"/>
        <definition firstyear="1950">
            <lunisolar month="1" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Spring Festival (Chinese New Year, 2nd day)" type="public"/>
        <description language="zh" name="春节 (2nd day)" type="public"/>
        <definition firstyear="1950">
            <lunisolar month="1" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Spring Festival (Chinese New Year, 3rd day)" type="public"/>
        <description language="zh" name="春节 (3rd day)" type="public"/>
        <definition firstyear="1950" lastyear="2007">
            <lunisolar month="1" day="3"/>
        </definition>
        <definition firstyear="2008" lastyear="2013">
            <undefined/>
        </definition>
        <definition firstyear="2014">
            <lunisolar month="1" day="3"/>
        </definition>
    </holiday>

    <!--
         https://en.wikipedia.org/wiki/Qingming_Festival
         5th solar term (April 4, April 5 or April 6)
         It falls on the first day of the fifth solar term of the traditional Chinese lunisolar calendar.
         This makes it the 15th day after the Spring Equinox, either 4 or 5 April in a given year.
    -->
    <holiday>
        <description language="en" name="Tomb-Sweeping Day (Qingming Festival)" type="public"/>
        <description language="zh" name="清明节" type="public"/>
        <definition firstyear="2008">
            <equinox month="March" timezone="Asia/Shanghai"/>
            <add days="15"/>
        </definition>
    </holiday>


    <holiday>
        <description language="en" name="Labour Day" type="public"/>
        <description language="zh" name="清明节" type="public"/>
        <definition firstyear="1950">
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Labour Day (2nd day)" type="public"/>
        <description language="zh" name="清明节 (2nd day)" type="public"/>
        <definition firstyear="2000" lastyear="2007">
            <fixed month="May" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Labour Day (3rd day)" type="public"/>
        <description language="zh" name="清明节 (3rd day)" type="public"/>
        <definition firstyear="2000" lastyear="2007">
            <fixed month="May" day="3"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Dragon Boat Festival" type="public"/>
        <description language="zh" name="端午节" type="public"/>
        <definition firstyear="2008">
            <lunisolar month="5" day="5"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Mid-Autumn Festival" type="public"/>
        <description language="zh" name="中秋节" type="public"/>
        <definition firstyear="2008">
            <lunisolar month="8" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="National Day (1st day)" type="public"/>
        <description language="zh" name="国庆节" type="public"/>
        <definition firstyear="1950">
            <fixed month="October" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="National Day (2nd day)" type="public"/>
        <description language="zh" name="国庆节 (2nd day)" type="public"/>
        <definition firstyear="1950">
            <fixed month="October" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="National Day (3rd day)" type="public"/>
        <description language="zh" name="国庆节 (3rd day)" type="public"/>
        <definition firstyear="1999">
            <fixed month="October" day="3"/>
        </definition>
    </holiday>

    <!-- Traditional Chinese holidays -->

    <holiday>
        <description language="en" name="New Year's Day" type="traditional"/>
        <description language="zh" name="元旦" type="traditional"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Chinese New Year's Eve" type="traditional"/>
        <description language="zh" name="春节" type="traditional"/>
        <definition>
            <lunisolar month="1" day="1"/>
            <add days="-1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Chinese New Year (Spring Festival)" type="traditional"/>
        <description language="zh" name="春节" type="traditional"/>
        <definition>
            <lunisolar month="1" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Lantern Festival" type="traditional"/>
        <description language="zh" name="元宵节" type="traditional"/>
        <definition>
            <lunisolar month="1" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Zhonghe Festival" type="traditional"/>
        <description language="zh" name="中和节" type="traditional"/>
        <definition>
            <lunisolar month="2" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="International Women's Day" type="traditional" region="public holiday applicable to women (half-day)"/>
        <description language="zh" name="国际妇女节"/>
        <definition>
            <fixed month="March" day="8"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Arbor Day" type="traditional"/>
        <description language="zh" name="植树节" type="traditional"/>
