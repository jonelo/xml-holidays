            <fixed month="July" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="China National Maritime Day" type="traditional"/>
        <description language="zh" name="中国航海日" type="traditional"/>
        <definition year="2005">
            <fixed month="July" day="11"/>
