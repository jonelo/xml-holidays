<holidays country="INT">

    <default language="en"/>
    
    <!-- January -->
    
    <holiday>
        <!-- https://en.wikipedia.org/wiki/World_Leprosy_Day -->
        <description language="en" name="World Leprosy Day"/>
        <!-- https://de.wikipedia.org/wiki/Welt-Lepra-Tag -->
        <description language="de" name="Welt-Lepra-Tag"/>
        <!-- https://it.wikipedia.org/wiki/Giornata_mondiale_per_i_malati_di_lebbra -->
        <description language="it" name="Giornata mondiale per i malati di lebbra"/>
        <!-- https://tr.wikipedia.org/wiki/Dünya_Cüzzam_Günü -->
        <description language="tr" name="Dünya Cüzzam Günü"/>
        <definition firstyear="1954">
            <rule nth="Last" weekday="Sunday" month="January"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="World Braille Day"/>
        <description language="de" name="Welt-Braille-Tag"/>
        <definition firstyear="2001">
            <fixed month="January" day="4"/>
        </definition>
    </holiday>
    
    <holiday>
        <!-- https://en.wikipedia.org/wiki/National_Hugging_Day -->
        <description language="en" name="National Hugging Day"/>
        <!-- https://de.wikipedia.org/wiki/Weltknuddeltag -->
        <description language="de" name="Weltknuddeltag"/>
        <!-- https://fr.wikipedia.org/wiki/Journée_internationale_des_câlins -->
        <description language="fr" name="Journée internationale des câlins"/>
        <!-- https://nl.wikipedia.org/wiki/Knuffeldag -->
        <description language="nl" name="Knuffeldag"/>
        <definition firstyear="1986">
            <fixed month="January" day="21"/>
        </definition>
    </holiday>
    
    <!-- February -->
    
    <holiday>
        <!-- https://futurezone.at/digital-life/der-erste-februar-ist-change-your-password-day/178.401.606 -->
        <description language="en" name="Change Your Password Day"/>
        
        <definition firstyear="2016">
            <fixed month="February" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="de" name="Weltkrebstag"/>
        <description language="en" name="World Cancer Day"/>

        <definition firstyear="2000">
            <fixed month="February" day="4"/>
        </definition>
    </holiday>


    <holiday>
        <!-- https://www.saferinternetday.org -->
        <description language="en" name="Safer Internet Day"/>
        <!-- https://de.wikipedia.org/wiki/Safer_Internet_Day -->
        <description language="de" name="Safer Internet Day"/>
        <!-- https://it.wikipedia.org/wiki/Safer_Internet_Day -->
        <description language="it" name="Safer Internet Day"/>
        
        <definition firstyear="2004">
            <!-- zweiter Tag der zweiten Woche des zweiten Monats -->
            <rule nth="Second" weekday="Sunday" month="February"/>
            <add days="-5"/>
        </definition>
        
    </holiday>
    
    <!-- March -->

    <holiday>
        <!-- https://de.wikipedia.org/wiki/Welttag_der_Meteorologie -->
        <description language="de" name="Welttag der Meteorologie"/>
        <!-- https://en.wikipedia.org/wiki/World_Meteorological_day -->
        <description language="en" name="World Meteorological day"/>
        <!-- https://es.wikipedia.org/wiki/D%C3%ADa_Meteorológico_Mundial -->
        <description language="es" name="Día Meteorológico Mundial"/>

        <definition firstyear="1950">
            <fixed month="March" day="23"/>
        </definition>

    </holiday>

    <!--
      http://en.wikipedia.org/wiki/Pi_Day
      -->
    <holiday>
        <description language="en" name="Pi Day"/>
        <definition firstyear="1988">
            <fixed month="March" day="14"/>
        </definition>
    </holiday>


    <!-- April -->

    <!--
      http://en.wikipedia.org/wiki/Earth_Day
      -->
    <holiday>
        <description language="en" name="Earth Day"/>
        <definition firstyear="1970">
            <fixed month="April" day="22"/>
        </definition>
    </holiday>


    <!-- May -->

    <holiday>
        <description language="en" name="World Password Day"/>

        <!-- https://www.csoonline.com/article/2919557/microsoft-subnet/world-password-day-2015-change-your-passwords-on-may-7.html
        "May 7[, 2015] is the third annual World Password Day"
        -->
        <definition firstyear="2013">
            <rule nth="First" weekday="Thursday" month="May"/>
        </definition>
    </holiday>

    <!-- 
      http://www.sueddeutsche.de/kultur/artikel/690/115575/
      0x25+0x5=37+5=42 ;)
      -->
    <holiday>
        <description language="en" name="Towel Day"/>
        <definition lastyear="2000">
            <undefined/>
        </definition>
        <definition firstyear="2001">
            <fixed month="May" day="25"/>
        </definition>
    </holiday>

    <!-- June -->
    
    <!-- July -->
    
    <!-- August -->
    
    <!-- September -->
    
    <!-- October -->    

    <!--
      http://en.wikipedia.org/wiki/World_Animal_Day
      -->
    <holiday>
        <description language="en" name="World Animal Day"/>
        <description language="de" name="Welttierschutztag"/>
        <definition firstyear="1931">
            <fixed month="October" day="4"/>
        </definition>
    </holiday>
    
    <!-- November -->
    
    <!-- December -->
    

</holidays>
