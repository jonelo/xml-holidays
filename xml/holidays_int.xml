        <!-- https://it.wikipedia.org/wiki/Giornata_mondiale_per_i_malati_di_lebbra -->
        <description language="it" name="Giornata mondiale per i malati di lebbra"/>
        <!-- https://tr.wikipedia.org/wiki/Dünya_Cüzzam_Günü -->
        <description language="tr" name="Dünya Cüzzam Günü"/>
        <definition firstyear="1954">
            <rule nth="Last" weekday="Sunday" month="January"/>
        </definition>
    </holiday>
    
    <!-- March -->

    <!--
      http://en.wikipedia.org/wiki/Pi_Day
      -->
    <holiday>
        <description language="en" name="Pi Day"/>
        <definition firstyear="1988">
            <fixed month="March" day="14"/>
        </definition>
    </holiday>


    <!-- April -->

    <!--
      http://en.wikipedia.org/wiki/Earth_Day
      -->
    <holiday>
        <description language="en" name="Earth Day"/>
        <definition firstyear="1970">
            <fixed month="April" day="22"/>
        </definition>
    </holiday>


    <!-- May -->

