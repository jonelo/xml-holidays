<holidays country="BR">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Brazil
         http://pt.wikipedia.org/wiki/Feriados_no_Brasil -->

    <default language="pt"/>

    <holiday>
        <description language="pt" name="Confraternização Universal"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Carnaval"/>
        <description language="en" name="Carnival festivities begin" type="public holiday"/>
        <definition>
            <easter/>
            <add days="-40"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Quarta-feira de Cinzas"
                     type="public holiday, but only the morning is considered a holiday"/>
        <description language="en" name="Ash Wednesday"/>
        <definition>
            <easter/>
            <add days="-46"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Sexta-Feira Santa"/>
        <description language="en" name="Good Friday" type="public holiday"/>
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Páscoa"/>
        <import id="Easter Sunday"/>
    </holiday>

    <holiday>
        <description language="pt" name="Tiradentes"/>
        <description language="en" name="Tiradentes" type="public holiday"/>
        <definition>
            <fixed month="April" day="21"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Labour_Day -->
    <holiday>
        <description language="pt" name="Dia do Trabalho"/>
        <description language="en" name="Labour Day" type="public holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Mothers_Day -->
    <holiday>
        <description language="pt" name="Dia das Mães"/>
        <description language="en" name="Mother's Day"/>
        <definition>
            <rule nth="Second" weekday="Sunday" month="May"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Valentine%27s_Day#Central_and_South_America -->
    <!-- The February 14's Valentine's Day is not celebrated at all, mainly for
         cultural and commercial reasons, since it usually falls too little
         before or after Carnival, a major floating holiday in Brazil -->
    <holiday>
        <description language="pt" name="Dia dos Namorados"/>
        <description language="en" name="Valentine's Day"/>
        <definition>
            <fixed day="12" month="June"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="en" name="Corpus Christi" type="public holiday"/>
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Dia dos Pais"/>
        <description language="en" name="Father's Day"/>
        <definition>
            <rule nth="Second" weekday="Sunday" month="August"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Dia_do_Soldado -->
    <holiday>
        <description language="pt" name="Dia do Soldado"/>
        <description language="en" name="Soldier's Day"/>
        <definition firstyear="1923">
            <fixed day="25" month="August"/>
        </definition>
    </holiday>
    
    <!-- http://en.wikipedia.org/wiki/Independence_Day -->
    <!-- Declared Independence from Portugal on September 7, 1822. It was
         declared by Dom Pedro I, son of the King of Portugal and the first
         Brazilian Emperor, but the independence act was not recognized until
         August 29, 1825. -->
    <holiday>
        <description language="pt" name="Dia da Independência"/>
        <description language="en" name="Independence Day" type="public holiday"/>
        <definition firstyear="1825">
            <fixed month="September" day="7"/>
        </definition>
    </holiday>

    <!-- http://en.wikipedia.org/wiki/Our_Lady_of_Aparecida -->
    <holiday>
        <description language="pt" name="Nossa Senhora de Aparecida"/>
        <description language="en" name="Our Lady of Aparecida" type="public holiday, catholic"/>
        <definition>
            <fixed month="October" day="12"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Dia de Todos-os-Santos"/>
        <import id="All Saint's Day"/>
    </holiday>

    <holiday>
        <description language="pt" name="Dia de Finados"/>
        <description language="en" name="All Soul's Day" type="public holiday"/>
        <import id="All Soul's Day"/>
    </holiday>

    <holiday>
        <description language="pt" name="Proclamação da República"/>
        <description language="en" name="Proclamation of the Republic Day" type="public holiday"/>
        <definition>
            <fixed month="November" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Natal"/>
        <description language="en" name="Christmas Day" type="public holiday"/>
        <import id="Christmas Day"/>
    </holiday>

    <holiday>
        <description language="pt" name="Véspera de Ano Novo"/>
        <description language="en" name="New Year's Eve"/>
        <import id="New Year's Eve"/>
    </holiday>

</holidays>