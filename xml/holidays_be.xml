<holidays country="BE">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Belgium -->

    <default language="nl"/>
    <default language="fr"/>
    <default language="de"/>

    <holiday>
        <description language="nl" name="Nieuwjaar" />
        <description language="fr" name="Nouvel An" />
        <description language="de" name="Neujahr" />
        <description language="en" name="New Year's Day" type="plublic holiday"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Driekoningen" />
        <description language="fr" name="Épiphanie" />
        <description language="de" name="Erscheinung des Herrn" />
        <description language="en" name="Epiphany" type="non official public holiday"/>
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Valentijnsdag" />
        <description language="fr" name="Saint-Valentin" />
        <description language="de" name="Valentinstag" />
        <description language="en" name="Valentine's Day" type="non official public holiday"/>
        <definition>
            <fixed month="February" day="14"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Pasen" />
        <description language="fr" name="Pâques" />
        <description language="de" name="Ostern" />
        <description language="en" name="Easter" type="plublic holiday"/>
        <definition>
            <easter/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Paasmaandag" />
        <description language="fr" name="Lundi de Pâques" />
        <description language="de" name="Ostermontag" />
        <description language="en" name="Easter Monday" type="plublic holiday"/>
        <definition>
            <easter/>
            <add days="+1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Dag van de arbeid" />
        <description language="fr" name="Fête du Travail" />
        <description language="de" name="Tag der Arbeit" />
        <description language="en" name="Labour Day" type="plublic holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Feest van de Vlaamse Gemeenschap" />
        <description language="en" name="Day of the Flemish Community"
                     type="non plublic holiday" region="observed in Flemish Community only"/>
        <definition>
            <fixed month="July" day="11"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Onze Lieve Heer hemelvaart" />
        <description language="fr" name="Ascension" />
        <description language="de" name="Christi Himmelfahrt" />
        <description language="en" name="Ascension" type="plublic holiday"/>
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Pinksteren" />
        <description language="fr" name="Pentecôte" />
        <description language="de" name="Pfingsten" />
        <description language="en" name="Pentecost" type="plublic holiday"/>
        <definition>
            <easter/>
            <add days="+49"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Pinkstermaandag" />
        <description language="fr" name="Lundi de Pentecôte" />
        <description language="de" name="Pfingstmontag" />
        <description language="en" name="Pentecost Monday" type="plublic holiday"/>
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Nationale feestdag" />
        <description language="fr" name="Fête nationale" />
        <description language="de" name="Nationalfeiertag" />
        <description language="en" name="National holiday" type="plublic holiday"/>
        <definition>
            <fixed month="July" day="21"/>
        </definition>
    </holiday>

    <holiday>
        <description language="fr" name="Fête de la Communauté française de Belgique" />
        <description language="en" name="Day of the French Community of Belgium"
                     type="non plublic holiday" region="in the French Community only"/>
        <definition>
            <fixed month="September" day="27"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Onze Lieve Vrouw hemelvaart" />
        <description language="fr" name="Assomption" />
        <description language="de" name="Mariä Himmelfahrt" />
        <description language="en" name="Assumption of Mary" type="plublic holiday"/>
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Allerheiligen" />
        <description language="fr" name="Toussaint" />
        <description language="de" name="Allerheiligen" />
        <description language="en" name="All Saints" type="public holiday"/>
        <definition>
            <fixed month="November" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Allerzielen" />
        <description language="fr" name="Fête des morts" />
        <description language="de" name="Allerseelen" />
        <description language="en" name="All Soul's Day"/>
        <definition>
            <fixed month="November" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Wapenstilstand" />
        <description language="fr" name="Jour de l'armistice" />
        <description language="de" name="Waffenstillstand" />
        <description language="en" name="Armistice Day" type="public holiday"/>
        <definition firstyear="1918">
            <fixed month="November" day="11"/>
        </definition>
    </holiday>

    <holiday>
        <description language="de" name="Tag der Deutschsprachigen Gemeinschaft Belgiens" />
        <description language="en" name="Day of the German-speaking Community of Belgium"
                     type="non public holiday" region="in the German-speaking region only"/>
        <definition>
            <fixed month="November" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Koningsdag" />
        <description language="fr" name="Fête du Roi" />
        <description language="de" name="Festtag des Königs" />
        <description language="en" name="King's Feast" type="non public holiday"/>
        <definition>
            <fixed month="November" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Sinterklaas" />
        <description language="fr" name="Saint-Nicolas (fête)" />
        <description language="de" name="Sankt Nikolaus" />
        <description language="en" name="Saint Nicholas" type="non public holiday"/>
        <definition>
            <fixed month="December" day="6"/>
        </definition>
    </holiday>

    <holiday>
        <description language="nl" name="Kerstmis" />
        <description language="fr" name="Noël" />
        <description language="de" name="Weihnacht" />
        <description language="en" name="Christmas" type="plublic holiday"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

</holidays>