<!-- Russia -->
<holidays country="RU">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Russia
    Russland http://www.russlandjournal.de/russland/reiseinformationen/feiertage/-->
	<!-- generell gilt: fällt ein Feiertag auf Samstag oder Sonntag wird der Feiertag auf einen
	     Arbeitstag verlegt !! -->
	<!-- viele Geschäfte bleiben vom 31.12 - 7.1 durchgehend geschlossen 
        If the date of observance falls on a Saturday or Sunday, the following Monday will be a day off in lieu of the holiday
        -->

    <default language="ru"/>

    <holiday>
        <description language="ru" name="Новый Год / Novy God"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <definition>
            <fixed month="January" day="1"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="Рождество / Rozhdestvo"/>
        <description language="en" name="Orthodox Christmas Day" type="public holiday"/>
        <definition>
            <fixed month="January" day="7"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День святого Валентина"/>
        <description language="en" name="Valentine's Day"/>
        <description language="de" name="Valentinstag"/>
         <definition>
            <fixed month="February" day="14"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="Масленица / Maslenitsa"/>
        <description language="en" name="Carnival"/>
        <description language="de" name="Russische Fastnacht"/>
        <definition>
            <easter church="eastern"/>
            <add days="-47"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День Защитника Отечества / Den' zashchitnika Otechestva" type="public holiday"/>
        <description language="en" name="Defender of the Fatherland Day"/>
        <definition>
            <fixed month="February" day="23"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>
    
    <holiday>
        <description language="ru" name="Международный Женский День"/>
        <description language="en" name="International Women's Day" type="public holiday"/>
        <description language="de" name="Weltfrauentag"/>
        <definition>
            <fixed month="March" day="8"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День весны и труда"/>
        <description language="en" name="Spring and Labour Day" type="public holiday"/>
        <description language="de" name="Tag des Frühlings und der Arbeit"/>
        <definition>
            <fixed month="May" day="1"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День Победы"/>
        <description language="de" name="Tag des Sieges über den Faschismus 1945"/>
        <description language="en" name="Victory Day" type="public holiday"/>
        <definition firstyear="1945">
            <fixed month="May" day="9"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День России"/>
        <description language="en" name="Russia Day" type="public holiday"/>
        <description language="de" name="Tag Russlands"/>
        <definition>
            <fixed month="June" day="12"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День народного единства"/>
        <description language="de" name="Tag der Einheit des Volkes "/>
        <description language="en" name="Unity Day" type="public holiday"/>
        <definition firstyear="2005">
            <fixed month="November" day="4"/>
            <condition ifweekday="Sunday">
                <add days="1"/>
            </condition>
            <condition ifweekday="Saturday">
                <add days="+2"/>
            </condition>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="Пасха"/>
        <description language="en" name="Easter"/>
        <description language="de" name="Russisch-Orthodox Ostern"/>
        <definition>
            <easter church="eastern"/>
        </definition>
    </holiday>

    <holiday>
        <description language="ru" name="День Знамени"/>
        <description language="de" name="Tag der Nationalflagge"/>
        <definition>
            <fixed month="August" day="22"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="ru" name="День Конституции"/>
        <description language="de" name="Tag der Verfassung"/>
        <definition>
            <fixed month="December" day="12"/>
        </definition>
    </holiday>
</holidays>