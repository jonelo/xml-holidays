    This file is from the free xml-holidays project. See also
    https://github.com/jonelo/xml-holidays/
    Thank you for keeping the comment.
-->
<holidays country="SI">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Slovenia -->

    <default language="sl"/>

    <holiday>
        <description language="sl" name="novo leto"/>
        <description language="en" name="New Year's Day" type="state holiday, work-free"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="2. novo leto"/>
        <description language="en" name="New Year's Day" type="state holiday, work-free"/>
        <definition>
            <fixed month="January" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="Prešernov dan, slovenski kulturni praznik"/>
        <description language="en" name="The Slovenian Cultural Holiday" type="state holiday, work-free"/>
        <!-- established as the national cultural day in 1944, work-free since 1991. -->
        <definition firstyear="1944">
            <fixed month="February" day="8"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Ljubljana" action="start"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="sl" name="velika noč in velikonočni ponedeljek"/>
        <description language="en" name="Easter Sunday" type="work-free day"/>
        <import id="Easter Sunday"/>
    </holiday>

    <holiday>
        <description language="sl" name="2. velika noč in velikonočni ponedeljek"/>
        <description language="en" name="Easter Monday" type="work-free day"/>
        <import id="Easter Monday"/>
    </holiday>

    <holiday>
        <description language="sl" name="dan upora proti okupatorju"/>
        <description language="en" name="Day of Uprising Against Occupation" type="state holiday, work-free"/>
        <definition>
            <fixed month="April" day="27"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="praznik dela"/>
        <description language="en" name="Labour Day" type="state holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="2. praznik dela"/>
        <description language="en" name="2. Labour Day" type="state holiday"/>
        <definition>
            <fixed month="May" day="2"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="binkoštna nedelja"/>
        <description language="en" name="Pentecost" type="work-free day"/>
        <import id="Pentecost"/>
    </holiday>

    <holiday>
        <description language="sl" name="dan državnosti"/>
        <description language="en" name="Statehood Day" type="state holiday"/>
        <definition>
            <fixed month="June" day="25"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="Marijino vnebovzetje"/>
        <description language="en" name="Assumption Day" type="work-free day"/>
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan združitve prekmurskih Slovencev z matičnim narodom po prvi svetovni vojni"/>
        <description language="en" name="Union of the Slovenians in Prekmurje with the mother nation after the First World War" type="state holiday, not work-free"/>
        <definition>
            <fixed month="August" day="17"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="End Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Ljubljana" action="end"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan vrnitve Primorske k matični domovini"/>
        <description language="en" name="Reunion of Slovenian Littoral with the motherland" type="state holiday, not work-free"/>
        <definition>
            <fixed month="September" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan reformacije"/>
        <description language="en" name="Reformation Day" type="work-free day"/>
        <definition>
            <fixed month="October" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan spomina na mrtve"/>
        <description language="en" name="Remembrance day" type="state holiday, work-free"/>
        <definition>
            <fixed month="November" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan Rudolfa Maistra"/>
        <description language="en" name="Rudolf Maister Day" type="state holiday, not work-free"/>
        <definition>
            <fixed month="November" day="23"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="Božič"/>
        <description language="en" name="Christmas Day" type="work-free day"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday>
        <description language="sl" name="dan samostojnosti in enotnosti"/>
        <description language="en" name="Independence and Unity Day" type="state holiday, work free"/>
        <!-- Commemorates the proclamation of the independence plebiscite results in 1990 -->
        <definition firstyear="1990">
            <fixed month="December" day="26"/>
        </definition>
    </holiday>

</holidays>



