<holidays country="PT">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Portugal -->

    <default language="pt"/>

    <holiday>
        <description language="pt" name="Ano Novo"/>
        <description language="en" name="New Year's Day" type="public holiday"/>
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="Carnival"/>
        <import id="Carnival"/>
    </holiday>

    <holiday>
        <description language="en" name="Begin Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Lisbon" action="start"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Sexta-Feira Santa"/>
        <description language="en" name="Good Friday" type="public holiday"/>
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="pt" name="Páscoa"/>
        <description language="en" name="Easter Sunday" type="public holiday"/>
        <import id="Easter Sunday"/>
    </holiday>
    
    <!-- Celebrates the 1974 Revolution that ended the 
         Dictatorship and started Democracy -->
    <holiday>
        <description language="pt" name="Dia da Liberdade"/>
        <description language="en" name="Freedom Day" type="public holiday"/>
        <definition firstyear="1974">
        	<fixed month="April" day="25" />
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Dia do Trabalhador"/>
        <description language="en" name="Labour Day" type="public holiday"/>
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Corpo de Deus"/>
        <description language="en" name="Corpus Christi" type="public holiday"/>
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Dia de Portugal, de Camões e das Comunidades Portuguesas"/>
        <description language="en" name="Portugal Day" type="public holiday"/>
        <definition firstyear="1580">
        	<fixed month="June" day="10" />
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Assunção de Nossa Senhora"/>
        <description language="en" name="Assumption of Mary" type="public holiday"/>
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Implantação da República"/>
        <description language="en" name="Republic Day" type="public holiday"/>
        <definition firstyear="1910">
        	<fixed month="October" day="5" />
        </definition>
    </holiday>

    <holiday>
        <description language="en" name="End Daylight Saving Time"/>
        <definition>
            <dst timezone="Europe/Lisbon" action="end"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Todos os Santos"/>
        <description language="en" name="All Saint's Day" type="public holiday"/>
        <import id="All Saint's Day"/>
    </holiday>

    <holiday>
        <description language="pt" name="Restauração da Independência"/>
        <description language="en" name="Restoration of Independence"/>
        <definition>
            <fixed month="December" day="1"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Imaculada Conceição"/>
        <description language="en" name="Immaculate Conception's day" type="public holiday"/>
        <definition>
            <fixed month="December" day="8"/>
        </definition>
    </holiday>

    <holiday>
        <description language="pt" name="Natal"/>
        <description language="en" name="Christmas Day" type="public holiday"/>
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

</holidays>
