<holidays country="DDR" valid="false">
    <!-- https://de.wikipedia.org/wiki/Feiertage_in_der_DDR -->
    <!-- Die DDR bestand vom 7. Oktober 1949 bis zum 2. Oktober 1990 -->

    <default language="de"/>

    <holiday>
        <description language="de" name="Neujahr" type="gesetzlich"/>
        <description language="en" name="New Year's Day" type="public holiday"/>

        <definition firstyear="1950" lastyear="1990">
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Karfreitag" type="gesetzlich"/>
        <description language="en" name="Good Friday" type="public holiday"/>

        <definition firstyear="1950" lastyear="1990">
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Ostersonntag (Ostern)"/>
        <description language="en" name="Easter Sunday"/>

        <definition firstyear="1950" lastyear="1990">
            <easter/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Ostermontag" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1967">
            <easter/>
            <add days="1"/>
        </definition>
        <definition year="1990">
            <easter/>
            <add days="1"/>
        </definition>

    </holiday>
    
    <holiday>
        <description language="de" name="Internationaler Kampf- und Feiertag der Werktätigen für Frieden und Sozialismus" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1990">
            <fixed month="May" day="1" />
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Tag der Befreiung" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1967">
            <fixed month="May" day="8" />
        </definition>
        <definition year="1985">
            <fixed month="May" day="8" />
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Tag des Sieges" type="gesetzlich"/>
        <definition year="1975">
            <fixed month="May" day="9" />
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Christi Himmelfahrt" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1967">
            <easter/>
            <add days="+39"/>
        </definition>
        <definition year="1990">
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Pfingstsonntag (Pfingsten)" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1990">
            <easter/>
            <add days="+49"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Pfingstmontag" type="gesetzlich"/>
        <definition firstyear="1950" lastyear="1990">
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Tag der Republik" type="gesetzlich"/>
        <definition firstyear="1949" lastyear="1989">
            <fixed month="October" day="7"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Reformationstag" type="gesetzlich (ausser in den Bezirken Halle, Magdeburg und Berlin (Ost))"/>
        <definition firstyear="1950" lastyear="1966">
            <fixed month="October" day="31"/>
        </definition>
        <definition year="1990">
            <fixed month="October" day="31"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="Buß- und Bettag" type="gesetzlich"/>
        <description language="en" name="Day of Repentance and Prayer" type="public holiday"/>

        <definition firstyear="1950" lastyear="1966">
            <advent/>
            <add days="-11"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="1. Weihnachtsfeiertag (Weihnachten)" type="gesetzlich"/>
        <description language="en" name="Christmas Day" type="public holiday"/>

        <definition firstyear="1949" lastyear="1989">
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    
    <holiday>
        <description language="de" name="2. Weihnachtsfeiertag (Weihnachten)" type="gesetzlich"/>
        <description language="en" name="Boxing Day" type="public holiday"/>

        <definition firstyear="1949" lastyear="1989">
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
    
</holidays>