<holidays country="CZ">
    <!-- 
       http://en.wikipedia.org/wiki/Public_holidays_in_the_Czech_Republic
       Tschech. Republik 
       http://www.touristiklinks.de/laender/europa.php/tschechien/gesetzliche_feiertage/ -->

    <holiday name="Nový rok / Den obnovy samostatného českého státu" type="public"
              international="New Year's Day / Restoration Day of the Independent Czech State">
        <import name="New Year's Day"/>
    </holiday>

    <holiday name="Popeleční středa">
        <import name="Ash Wednesday"/>
    </holiday>

    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Prague" action="start"/>
        </definition>
    </holiday>

    <holiday name="Květná neděle">
        <definition>
            <easter/>
            <add days="-7"/>
        </definition>
    </holiday>

    <holiday name="Zelený čtvrtek" international="Maundy Thursday">
        <definition>
            <easter/>
            <add days="-3"/>
        </definition>
    </holiday>
    
    <holiday name="Velký pátek" international="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>

    <holiday name="Bílá sobota" international="Holy Saturday">
        <definition>
            <easter/>
            <add days="-1"/>
        </definition>
    </holiday>

    <holiday name="Boží hod velikonožní">
        <import name="Easter Sunday"/>
    </holiday>

    <holiday name="Velikonoční pondělí" type="public">
        <import name="Easter Monday"/>
    </holiday>

    <holiday name="Svátek práce" type="public" international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday name="Den vítězství or Den osvobození" type="public"
             international="Liberation Day">
        <definition firstyear="1945">
            <fixed month="May" day="8"/>
        </definition>
    </holiday>

    <holiday name="Den slovanských věrozvěstů Cyrila a Metoděje" type="public"
             international="Saints Cyril and Methodius Day">
        <definition>
            <fixed month="July" day="5"/>
        </definition>
    </holiday>

    <holiday name="Den upálení mistra Jana Husa" type="public"
             international="Jan Hus Day">
        <definition>
            <fixed month="July" day="6"/>
        </definition>
    </holiday>

    <holiday name="Den české státnosti" type="public"
             international="Czech Statehood Day">
        <definition>
            <fixed month="September" day="28"/>
        </definition>
    </holiday>

    <holiday name="Den vzniku samostatného československého státu"
             type="public"
             international="Independent Czechoslovak State Day">
        <definition>
            <fixed month="October" day="28"/>
        </definition>
    </holiday>

    <holiday name="End Daylight Saving Time (Uhren 1 h zurückstellen)" 
             international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Prague" action="end"/>
        </definition>
    </holiday>

    <holiday name="Den boje za svobodu a demokracii" type="public"
             international="Struggle for Freedom and Democracy Day">
        <definition>
            <fixed month="November" day="17"/>
        </definition>
    </holiday>
    
    <holiday name="Ŝtědrý den" type="public" international="Christmas Eve">
        <import name="Christmas Eve"/>
    </holiday>

    <holiday name="1. svátek vánoční" type="public" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>

    <holiday name="2. svátek vánoční" type="public" international="The Second Christmas Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
</holidays>