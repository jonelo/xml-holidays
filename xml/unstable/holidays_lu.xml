<holidays country="LU">
    <!-- Luxenburg http://www.ferienwohnungen-kroatien.net/feiertage/feiertage_luxemburg.shtml -->

    <holiday name="Neujahrstag" type="gesetzlich" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>
    <holiday name="Rosenmontag">
        <definition>
            <easter/>
            <add days="-48"/>
        </definition>
    </holiday>
    <holiday name="Beginn der Sommerzeit (Uhren 1 h vorstellen)" international="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Luxembourg" action="start"/>
        </definition>
    </holiday>
    <holiday name="Karfreitag" type="gesetzlich" international="Good Friday">
        <definition>
            <easter/>
            <add days="-2"/>
        </definition>
    </holiday>
    <holiday name="Ostersonntag (Ostern)" type="gesetzlich">
        <import name="Easter Sunday"/>
    </holiday>
    <holiday name="Ostermontag (Emmaustag)" type="gesetzlich">
        <import name="Easter Monday"/>
    </holiday>
    <holiday name="Tag der Arbeit" type="gesetzlich">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>
    <holiday name="Christi Himmelfahrt" type="gesetzlich">
        <definition>
            <easter/>
            <add days="+39"/>
        </definition>
    </holiday>
    <holiday name="Pfingstsonntag (Pfingsten)" type="gesetzlich" international="Whit Sunday">
        <import name="Pentecost"/>
    </holiday>
    <holiday name="Pfingstmontag" type="gesetzlich">
        <definition>
            <easter/>
            <add days="+50"/>
        </definition>
    </holiday>
    <holiday name="Tag der Arbeit" type="gesetzlich">
        <definition>
            <fixed month="June" day="23"/>
        </definition>
    </holiday>
    <holiday name="Mariä Himmelfahrt" type="gesetzlich">
        <definition>
            <fixed month="August" day="15"/>
        </definition>
    </holiday>
    <holiday name="Kirmes (nur in der Stadt Luxemburg)" type="local">
        <definition>
            <fixed month="September" day="3"/>
        </definition>
    </holiday>
    <holiday name="Ende der Sommerzeit (Uhren 1 h zurückstellen)" international="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Luxembourg" action="end"/>
        </definition>
    </holiday>
    <holiday name="Allerheiligen" type="gesetzlich" international="All Saints">
        <!-- All Saint's Day is a Christian holy day observed by many Western churches on November 1 -->
        <import name="All Saints’ Day"/>
    </holiday>
    <holiday name="Weihnachten" type="gesetzlich" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    <holiday name="2. Weihnachtsfeiertag/Stephanstag" type="gesetzlich" international="Boxing Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
</holidays>