<holidays country="HR">
    <!-- Kroatien http://www.kroatientips.de/html/feiertage_kroatien_feiertage_k.html -->
    <!-- http://www.feiertagskalender.ch -->

    <holiday name="Nova godina" type="public" international="New Year's Day">
        <definition>
            <fixed month="January" day="1"/>
        </definition>
    </holiday>

    <holiday name="Bogojavljenje" type="public" international="Epiphany">
        <definition>
            <fixed month="January" day="6"/>
        </definition>
    </holiday>

    <holiday name="Begin Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Zagreb" action="start"/>
        </definition>
    </holiday>

    <holiday name="Uskrs" type="public">
        <import name="Easter Sunday"/>
    </holiday>

    <holiday name="Uskršnji ponedjeljak" type="public">
        <import name="Easter Monday"/>
    </holiday>

    <holiday name="Međunarodni praznik rada" type="public" international="Labour Day">
        <definition>
            <fixed month="May" day="1"/>
        </definition>
    </holiday>

    <holiday name="Tijelovo" type="public" international="Corpus Christi">
        <definition>
            <easter/>
            <add days="+60"/>
        </definition>
    </holiday>

    <holiday name="Dan antifašističke borbe" type="public" international="Anti-fascist struggle day">
        <definition>
            <fixed month="June" day="22"/>
        </definition>
    </holiday>

    <holiday name="Dan državnosti" type="public" international="Statehood Day">
        <definition firstyear="2006"> <!-- 2007 ?? -->
            <fixed month="June" day="25" />
        </definition>
    </holiday>
    
    <holiday name="Dan pobjede i domovinske zahvalnosti" type="public"
             international="Victory and Homeland Thanksgiving Day">
        <definition>
             <fixed month="August" day="5" />
        </definition>
    </holiday>

    <holiday name="Velika Gospa" type="public" international="Assumption of Mary">
        <definition>
            <fixed month="August" day="15" />
        </definition>
    </holiday>

    <holiday name="Dan neovisnosti" type="public" international="Independence Day">
        <definition>
            <fixed month="October" day="8" />
        </definition>
    </holiday>

    <holiday name="End Daylight Saving Time">
        <definition>
            <dst timezone="Europe/Zagreb" action="end"/>
        </definition>
    </holiday>

    <holiday name="Dan svih svetih" type="public" international="All Saints day">
        <definition>
            <fixed month="November" day="1" />
        </definition>
    </holiday>
    
    <holiday name="Božić" type="public" international="Christmas Day">
        <definition>
            <fixed month="December" day="25"/>
        </definition>
    </holiday>
    
    <holiday name="Sveti Stjepan" type="public" international="Boxing Day">
        <definition>
            <fixed month="December" day="26"/>
        </definition>
    </holiday>
</holidays>