    This file is from the free xml-holidays project. See also
    http://xml-holidays.sourceforge.net/
    Thank you for keeping the comment.
-->
<holidays country="AM">
    <!-- http://en.wikipedia.org/wiki/Public_holidays_in_Armenia 
         http://www.armeniadiaspora.com/travel/holidays.html
    -->

    <default language="hy"/>

    <holiday>
        <description language="hy" name="Ամանօր" type="public"/>
        <description language="en" name="New Year's Day" type="public"/>
        <import id="New Year's Day"/>
    </holiday>

    <holiday>
        <description language="hy" name="Նախածննդյան տոներ" type="public"/>
        <description language="en" name="Christmas Eve" type="public"/>
        <definition>
            <fixed day="5" month="January"/>
        </definition>
    </holiday>

    <holiday>
        <description language="hy" name="Սուրբ Ծնունդ" type="public"/>
        <description language="en" name="Christmas Day" type="public"/>
        <definition>
            <fixed day="6" month="January"/>
        </definition>
    </holiday>

    <holiday>
        <description language="hy" name="Սուրբ Ծննդյան և Հայտնության տոնին հաջորդող` Մեռելոց հիշատակի օր" type="public"/>
        <description language="en" name="The day of commemoration of all dead people after Christmas Day" type="public"/>
        <definition>
            <fixed day="7" month="January"/>
        </definition>
    </holiday>

    <!-- In celebration of Armenian Army formation on that day in 1992 -->
    <holiday>
        <description language="hy" name="Բանակի օր" type="public"/>
        <description language="en" name="Army Day" type="public"/>
        <definition firstyear="1992">
            <fixed day="28" month="January"/>
        </definition>
    </holiday> 

    <!-- https://armeniadiscovery.com/en/articles/march-eight-how-armenians-celebrate-it -->
    <holiday>
        <description language="hy" name="Կանանց տոն" type="public"/>
        <description language="en" name="International Women's Day" type="public"/>
        <definition firstyear="1921">
            <fixed day="8" month="March"/>
        </definition>
    </holiday>

    <!-- Armenian Genocide in 1915
         See also http://aglobalworld.com/holidays-around-the-world/armenian-genocide-memorial-day-armenia/
    -->
    <holiday>
        <description language="hy" name="Եղեռնի զոհերի հիշատակի օր" type="public"/>
        <description language="en" name="Genocide Remembrance Day" type="public"/>
        <definition firstyear="1915">
            <fixed day="24" month="April"/>
        </definition>
    </holiday>
    
    <!--
         See also http://aglobalworld.com/holidays-around-the-world/victory-peace-day-armenia/
         "Armenia participated in World War II as part of the Soviet Union [...]
         It is a day to celebrate and remember the victory over the Nazi forces that capitulated on May 8, 1945
         during World War II."
     -->
    <holiday>
        <description language="hy" name="Հաղթանակի եւ Խաղաղության տոն" type="public"/>
        <description language="en" name="Victory and Peace Day" type="public"/>
        <definition firstyear="1945">
            <fixed day="9" month="May"/>
        </definition>
    </holiday>
    
    <!-- Establishment of the Democratic Republic of Armenia
         See also http://aglobalworld.com/holidays-around-the-world/republic-day-armenia/
    -->
    <holiday>
        <description language="hy" name="Հանրապետության օր" type="public"/>
        <description language="en" name="Republic Day" type="public"/>
        <definition firstyear="1918">
            <fixed day="28" month="May"/>
        </definition>
    </holiday>

    <holiday>
        <description language="hy" name="Սահմանադրության օր" type="public"/>
        <description language="en" name="Constitution Day" type="public"/>
        <definition firstyear="1995">
            <fixed day="5" month="July"/>
        </definition>
    </holiday>

    <!-- From the Soviet Union in 1991 -->
    <holiday>
        <description language="hy" name="Անկախության օր" type="public"/>
        <description language="en" name="Independence Day" type="public"/>
        <definition firstyear="1991">
            <fixed day="21" month="September"/>
        </definition>
    </holiday>
    
    <!-- A devastating earthquake in 1988 killed thousands of people and
         destroyed most of the Republic’s infrastructure. -->
    <holiday>
        <description language="hy" name="Երկրաշարժի զոհերի հիշատակի օր" type="public"/>
        <description language="en" name="1988 Earthquake Memorial Day (Spitak Remembrance Day)" type="public"/>
        <definition firstyear="1988">
            <fixed day="7" month="December"/>
        </definition>
    </holiday>
    
    <!-- Vardavar is celebrated 98 days (14 weeks) after Easter. -->
    <holiday>
        <description language="hy" name="Վարդևար"/>
        <description language="en" name="Vardevar"/>
        <definition>
            <easter/>
            <add days="98"/>
        </definition>
    </holiday>
    
</holidays>